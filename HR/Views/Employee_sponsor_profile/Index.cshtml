@model IEnumerable<HR.Models.Employee_sponsor_profile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Employee_sponsor_profile")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>Add New  Employee Sponsor  Profile </a>
                </p>
            </div>

            

                <!-- /.box-header -->
                <div class="box-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Message"]
                        </div>
                    }

                    <table id="categories" class="table table-bordered table-striped text-center">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Employee Name </th>
                                <th>Sponsor Name</th>
                                <th>Residence Id</th>
                                <th>Issue place</th>
                                <th>Owner</th>
                                <th>Job</th>
                                <th>Birth date</th>
                                <th>Issue date</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Employee_Profile.Full_Name</td>
                                    <td>@item.Sponsor.Name</td>
                                    @if (@item.Residence_Id != null)
                                    {
                                        <td>@item.Residence_Id</td>}
                                    else
                                    {
                                        <td> Empty </td> }
                                    @if (@item.Issue_place != null)
                                    {
                                        <td>@item.Issue_place</td>}
                                    else
                                    {
                                        <td> Empty </td> }
                                    @if (@item.Owner != null)
                                    {
                                        <td>@item.Owner</td>}
                                    else
                                    {
                                        <td> Empty </td> }
                                    @if (@item.Job != null)
                                    {
                                        <td>@item.Job</td>}
                                    else
                                    {
                                        <td> Empty </td> }
                                   
                                    <td>@item.Birth_date.ToShortDateString()</td>
                                    <td>@item.Issue_date.ToShortDateString()</td>

                                    <td>
                                        <a href="@Url.Action("Edit", "Employee_sponsor_profile", new {id = item.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>Edit</a>
                                        <a href="@Url.Action("delete", "Employee_sponsor_profile", new {id = item.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
             
                    </table>
                </div>
            </div>

</section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}