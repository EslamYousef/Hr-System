                                    if (@item.validity != null)
                                    {
                                    <td style="width:30px">@item.validity</td>
                                    }
                                    else
                                    {
                                        <td style="width:30px">@organ.empty</td>
                                    }
                                }
                                @if (Model.my_list[14])
                                {
                                    if (@item.parment != null)
                                    {
                                    <td style="width:30px">@item.parment</td>
                                    }
                                    else
                                    {
                                        <td style="width:30px">@organ.empty</td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
