@model HR.Models.SetupPayroll.Bank

@using HR.Resource;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Payroll.CreateBank
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "Bank", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    <hr />

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Message"]
                        </div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">
                            @Payroll.Code
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Bank_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bank_Code, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-4" style="color:black">
                            <button type="submit" id="btnSubmit" name="Command" value="Submit" class="btn btn-success">@Payroll.Branches</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            @Payroll.Description
                        </label> <div class="col-md-4">
                            @Html.EditorFor(model => model.Bank_Desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bank_Desc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">
                            @Payroll.AlternativeDescription
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Bank_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bank_AltDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">
                            @Payroll.Swiftnumber
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Swift_Number, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Swift_Number, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("index","Bank")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>
                            <input type="submit" value=@Basic.Create class="btn btn-success" />

                        </div>
                    </div>
                </div>
                }

            </div>

        </div>

    </section>
</div>
@section scripts{}