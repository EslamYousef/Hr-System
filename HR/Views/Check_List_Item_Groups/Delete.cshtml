@model HR.Models.Check_List_Item_Groups
@using HR.Resource;

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<h3>@Personnel.message_delete</h3>
@using (Html.BeginForm("Delete", "Check_List_Item_Groups", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }
        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.GroupCode</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Group_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.GroupDescription</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Description_Group, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Personnel.Delete" class="btn btn-success" />
                <a href="@Url.Action("index","Check_List_Item_Groups")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>

            </div>
        </div>
    </div>
  

}
@section scripts{}