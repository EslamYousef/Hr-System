@model IEnumerable<HR.Models.Check_List_Item_Groups>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Check_List_Item_Groups")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>Add New Check List Item Groups</a>
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>Group Code</th>
                            <th>Description Group</th>
                            <th>Description Alternative To</th>
                            <th>The Purpose</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Group_Code</td>
                                <td>@item.Description_Group</td>
                                <td>@item.Description_Alternative</td>
                                <td>@item.The_Purpose</td>

                                <td>
                                    <a href="@Url.Action("Edit", "Check_List_Item_Groups", new {id = item.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>Edit</a>
                                    <a href="@Url.Action("Delete", "Check_List_Item_Groups", new {id = item.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Group Code</th>
                            <th>Description Group</th>
                            <th>Description Alternative To</th>
                            <th>The Purpose</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </section>

</div>
@section scripts{}

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>
