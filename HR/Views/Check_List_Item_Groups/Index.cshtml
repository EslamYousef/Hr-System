@model IEnumerable<HR.Models.Check_List_Item_Groups>
@using HR.Resource;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Check_List_Item_Groups")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewCheckListItemsGroups</a>
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>@Personnel.GroupCode</th>
                            <th>@Personnel.GroupDescription</th>
                            <th>@Personnel.DescriptionAlternative</th>
                            <th>@Personnel.ThePurpose</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Group_Code</td>
                                <td>@item.Description_Group</td>
                                <td>@item.Description_Alternative</td>
                                <td>@item.The_Purpose</td>

                                <td>
                                    <a href="@Url.Action("Edit", "Check_List_Item_Groups", new {id = item.ID})" class="create-btn" style="width:50px"><i class="fa fa-edit"></i>@Personnel.Edit1</a>
                                    <a href="@Url.Action("Delete", "Check_List_Item_Groups", new {id = item.ID})" class="create-btn"><i class="far fa-trash-alt"></i>@Personnel.Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
              
                </table>
            </div>
        </div>

    </section>

</div>
@section scripts{}

<!-- page script -->
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000
    }

        .create-btn svg {
            color: #0d62aa
        }
</style>