@model IEnumerable<HR.Models.Employee_subscription_syndicate_profile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Employee_subscription_syndicate_profile", new { id=@ViewBag.idemp })" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>Add New Employee Subscription Syndicate Profile </a>
                </p>
            </div>


            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Employee Name</th>
                            <th>Subscription Name</th>
                            <th>Subscription Date</th>
                            <th>Pay To Entity</th>
                            <th>Pay To Entity Type</th>
                            <th>Subscription In House</th>
                            <th>Is Family Subscribed</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Code</td>
                                <td>@item.Employee_Profile.Full_Name</td>
                                <td>@item.Subscription_Syndicate.Subscription_Description</td>
                                <td>@item.Subscription_date.ToShortDateString()</td>
                                @if (@item.Pay_to_entity != null)
                                {
                                    <td>@item.Pay_to_entity</td>}
                                else
                                {
                                    <td> Empty </td> }
                                @if (@item.Pay_to_entity_type != null)
                                {
                                    <td>@item.Pay_to_entity_type</td>}
                                else
                                {
                                    <td> Empty </td> }
                                <td>@item.Subscription_in_house</td>
                                <td>@item.Is_family_subscribed</td>


                                <td>
                                    <a href="@Url.Action("Edit", "Employee_subscription_syndicate_profile", new {id = item.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>Edit</a>
                                    <a href="@Url.Action("delete", "Employee_subscription_syndicate_profile", new {id = item.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Code</th>
                            <th>Employee Name</th>
                            <th>Subscription Name</th>
                            <th>Subscription Date</th>
                            <th>Pay To Entity</th>
                            <th>Pay To Entity Type</th>
                            <th>Subscription In House</th>
                            <th>Is Family Subscribed</th>

                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}