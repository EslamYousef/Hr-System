@model HR.Models.Definition_of_EOS_Interview_Questions
@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")

<script>
    QuestionsGroups();
    function QuestionsGroups()
    {
         
        var id = $("#EOSInterviewQuestionsGroups").val();
        $.ajax({
            type: "post",
            url: "/Helper/GetEOSInterviewQuestionsGroups",
            data: { "id": id },
            success: function (result) {
                 
                               $("#EOSInterviewQuestionsGroups").select2("val",result.ID);

                $("#QuestionsGroupsName2").val(result.Description_of);
            },
            error: function () {
                 
                $("#QuestionsGroupsName2").val(" ");
            }
        });
    }

</script>
<div class="content-wrapper">

  

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "Definition_of_EOS_Interview_Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" />@organ.create</div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "Definition_of_EOS_Interview_Questions")" class="create-btn">@pers_2.new_</a></div>
                        <div>
                            <i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","Definition_of_EOS_Interview_Questions")" class="create-btn" value=@organ.delete style="
    background-color: transparent" ; />
                        </div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "Definition_of_EOS_Interview_Questions")" class="create-btn"> @pers_2.Back</a></div>
                    </div>
                    <hr /><hr /><hr />
                    <section class="content-header">
                        <h1>
                            @Personnel.CreateDefinitionofEOSInterviewQuestions
                        </h1>
                    </section>
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })





                        <div class="form-group">
                            <label class="control-label col-md-2" style="color:red">@Personnel.QuestionCode</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Question_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Question_Code, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.QuestionDescription</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Question_Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Question_Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.Description</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2" style="color:red">@Personnel.QuestionGroup</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.Question_GroupId, new SelectList(ViewBag.EOS_Interview_Questions_Groups, "ID", "Code"), Personnel.QuestionGroup2, new { @class = "select2", @onchange = "QuestionsGroups()", @id = "EOSInterviewQuestionsGroups" })
                                @Html.ValidationMessageFor(model => model.Question_GroupId, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group" hidden>
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" id="btnSave" class="btn btn-success" name="Command" value="Save">@Personnel.Create</button>
                                <a href="@Url.Action("index","Definition_of_EOS_Interview_Questions")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>
