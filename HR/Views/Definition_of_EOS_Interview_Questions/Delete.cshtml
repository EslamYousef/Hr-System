@model HR.Models.Definition_of_EOS_Interview_Questions
@using HR.Resource;
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<h3>@Personnel.message_delete</h3>
@using (Html.BeginForm("Delete", "Definition_of_EOS_Interview_Questions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }


        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.QuestionCode</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Question_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

            </div>
        </div>
       

        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.QuestionDescription</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Question_Description, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Personnel.Delete" class="btn btn-success" />
                <a href="@Url.Action("index","Definition_of_EOS_Interview_Questions")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>

            </div>
        </div>
    </div>
    @section scripts{}

}