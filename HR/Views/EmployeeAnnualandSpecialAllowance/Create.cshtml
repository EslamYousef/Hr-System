@using HR.Resource;
<div class="panel panel-primary" data-collapsed="0">
    <div class="panel-body">
        @using (Html.BeginForm("Create", "EmployeeAnnualandSpecialAllowance", FormMethod.Post, new { id = "dd", enctype = "multipart/form-data" }))
