@*@model IEnumerable<HR.Models.TransactionsPayroll.ManualPaymentTransactionEntry>*@
@model IEnumerable<HR.Controllers.TransactionsPayroll.EmployeeAnnualandSpecialAllowanceController.EmployeeBasicSalaryHistory_VM>
@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";

}
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order": 1
        });
    });

</script>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <div class="form-group">
                    <div class="col-md-4">
                        <p class="lead">
                            <a href="@Url.Action("Create", "EmployeeAnnualandSpecialAllowance")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Payroll.AddNewSpecialAllowance</a>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="lead">
                            <label>@Payroll.EmployeeBasicSalaryHistory</label>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Edit", "Employee_Profile", new {id = @ViewBag.idemp})" class="create-btn"><i class="fas fa-undo"></i>@Personnel.BackToEmployeeProfile</a>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <hr />
                <div class="form-group" style="margin-top:70px;margin-left:30px">
                    <table id="categories" style="margin-top:20px" class="table table-striped">
                        <thead>
                            <tr>
                                <th>@Personnel.EmployeeName</th>
                                <th>@Payroll.Year</th>
                                <th>@Payroll.Month</th>
                                <th>@Payroll.AllowancePercentage</th>
                                <th>@Payroll.AllowanceAmount</th>
                                <th>@Personnel.BasicSalary_A</th>
                                <th>@Personnel.TotalExecludedAllowances</th>
                            </tr>
                        </thead>
                        <tbody id="tbody11">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.fullname</td>
                                    <td>@item.Employee_BasicSalary_History.History_Year</td>
                                    <td>@item.Employee_BasicSalary_History.History_Month</td>
                                    <td>@item.Employee_BasicSalary_History.Allowances_Percentage</td>
                                    <td>@item.Employee_BasicSalary_History.Allowances_Amount</td>
                                    <td>@item.Employee_BasicSalary_History.BasicSalary_A</td>
                                    <td>@item.Employee_BasicSalary_History.Total_excluded_Amount</td>
                                  
                                
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

</div>

<!-- page script -->

@section scripts{}
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000
    }

        .create-btn svg {
            color: #0d62aa
        }
</style>