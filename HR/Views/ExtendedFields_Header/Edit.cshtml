@model HR.Models.SetupPayroll.ExtendedFields_Header

@using HR.Resource;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Payroll.EditExtendedfields
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Edit", "ExtendedFields_Header", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.CategoryCode
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ExtendedFields_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExtendedFields_Code, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4" style="color:black">
                                <button type="submit" id="btnSubmit" name="Command" value="Submit" class="btn btn-success">@Payroll.ExtenedFieldsDetail</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.Description
                            </label> <div class="col-md-4">
                                @Html.EditorFor(model => model.ExtendedFields_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExtendedFields_Desc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.AlternativeDescription
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ExtendedFields_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ExtendedFields_AltDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.Propose
                            </label>
                            <div class="col-md-4">
                                @if (Model.Purpose == 1)
                                {
                                    <select name="Type" class="select2">
                                        <option value="1" selected>Financial contract</option>
                                        <option value="2">Manual transaction</option>
                                        <option value="3">Settlement - Payment</option>
                                    </select>
                                }
                                else if (Model.Purpose == 2)
                                {
                                    <select name="Type" class="select2">
                                        <option value="1">Financial contract</option>
                                        <option value="2" selected>Manual transaction</option>
                                        <option value="3">Settlement - Payment</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="Type" class="select2">
                                        <option value="1">Financial contract</option>
                                        <option value="2">Manual transaction</option>
                                        <option value="3" selected>Settlement - Payment</option>
                                    </select>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("index","ExtendedFields_Header")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>
                                <input type="submit" value=@Basic.Edit class="btn btn-success" />

                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>


@section scripts{}