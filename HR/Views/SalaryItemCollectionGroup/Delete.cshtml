@model HR.Models.CardPayroll.SalaryItemCollectionGroup_Header

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
@using HR.Resource;
<h3>@pers_2.deletemessage</h3>
@using (Html.BeginForm("delete", "SalaryItemCollectionGroup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">

    <hr />

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @TempData["Message"]
        </div>
    }


    <div class="form-group">

        <label class="control-label col-md-2">
            @pers_2.code
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.CollectionId, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

        </div>
    </div>
    <div class="form-group">

        <label class="control-label col-md-2">
            @Personnel.Description
        </label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.CollectionDesc, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value=@pers_2.delete class="btn btn-success" />
            <a href="@Url.Action("index","SalaryItemCollectionGroup")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@pers_2.Back</a>

        </div>
    </div>
</div>
}
@section scripts{}