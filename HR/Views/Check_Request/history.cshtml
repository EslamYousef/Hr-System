@model HR.Models.ViewModel.Check_Request_VM
@using HR.Resource;

@{
    ViewBag.Title = "history";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
         

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

               
                <table id="categories" class="table table-bordered table-striped text-center">

                    <thead>
                        <tr>
                            <th>@Basic.Request_number</th>
                            <th>@Basic.Request_date</th>
                            <th>@Basic.statuse</th>
                            <th>@Basic.Description1</th>
                            <th>@Basic.select_sign_by</th>
                            <th>@Basic.select_directedto</th>
                            <th>@Basic.Comment</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                      
                            <tr>
                                <td>@Model.check_Request.Request_number</td>
                                <td>@Model.check_Request.Request_date.ToShortDateString()</td>
                                <td>@Model.check_request_change_status.check_Request.Code</td>
                                <td>@Model.check_request_change_status.check_Request.Name</td>
                                @if (Model.check_request_change_status.Sign_by != null)
                                {
                                <td>@Model.check_request_change_status.Sign_by.Full_Name</td>
                                }else
                                {
                                    <td>empty</td>
                                }
                                @if (Model.check_request_change_status.Directed_to != null)
                                {
                                <td>@Model.check_request_change_status.Directed_to.Full_Name</td>
                                }
                                else
                                {
                                     <td>empty</td>
                                }
                                <td>@Model.check_request_change_status.Comment</td>
                             
                            </tr>
                        
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>@Basic.Request_number</th>
                            <th>@Basic.Request_date</th>
                            <th>@Basic.code</th>
                            <th>@Basic.Description1</th>
                            <th>@Basic.select_sign_by</th>
                            <th>@Basic.select_directedto</th>
                            <th>@Basic.Comment</th>
                          
                        </tr>
                    </tfoot>
                </table>

                <a href="@Url.Action("index", "Check_Request", new {id = @Model.check_Request.ID})" class="btn btn-primary btn-danger" style="width:70px;margin-right:420px;width:100px"><i class="fa fa-edit"></i>@Basic.Back</a>


            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>



@section scripts{}