<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="sec-nav">
                    <div>
                        <i class="fas fa-undo"></i><a style="" href="@Url.Action("penlaity_report_co", "penality_report")" class="create-btn"> @pers_2.Back</a>
                    </div>
                </div>
                <div style="margin-top:60px">

                </div>
                <table class="table table-bordered datatable" id="table-4">
                    <thead style="margin-right:15px">
                        <tr>
                            <th style="width:40px">
                                @pers_2.numberreq
                            </th>
                            @if (Model.flag[0])
                            {
                                <th style="width:40px">@pers_2.requestdate</th>
                            }
                            @if (Model.flag[1])
                            {
                                <th style="width:40px">@pers_2.event_date</th>
                            }

                            @if (Model.flag[2])
                            {
                                <th style="width:40px">@pers_2.employee</th>
                            }
                            @if (Model.flag[3])
                            {
                                <th style="width:40px">@pers_2.punishment</th>
                            }

                            @if (Model.flag[4])
                            {
                                <th style="width:40px">@pers_2.restdate</th>
                            }
                            @if (Model.flag[5])
                            {
                                <th style="width:40px">@pers_2.frequency</th>
                            }
                            @if (Model.flag[6])
                            {
                                <th style="width:40px">@pers_2.penalityitems</th>
                            }
                            @if (Model.flag[7])
                            {
                                <th style="width:30px">@pers_2.status</th>
                            }
                           
                        </tr>
                    </thead>
                    <tbody style="margin-right:15px">
                        @foreach (var item in Model.details_pun)
                        {
                            <tr>
                                <td style="width:40px">
                                    @item.number
                                </td>
                                @if (Model.flag[0])
                                {
                                    <td style="width:40px">@item.tran_date.ToString("dd/MM/yyyy")</td>
                                }
                                @if (Model.flag[1])
                                {
                                    <td style="width:40px">@item.event_date.ToString("dd/MM/yyyy")</td>
                                }

                                @if (Model.flag[2])
                                {

                                    <td style="width:40px">@item.emp_name</td>


                                }

                                @if (Model.flag[3])
                                {

                                    <td style="width:40px">@item.Discipline_PunishmentTransaction_Detail.punis_des</td>

                                }
                                @if (Model.flag[4])
                                {

                                    <td style="width:40px"> @item.Discipline_PunishmentTransaction_Detail.Punishment_RestDate.Value.ToString("dd/MM/yyyy")</td>

                                }
                                @if (Model.flag[5])
                                {

                                    <td style="width:40px">@item.Discipline_PunishmentTransaction_Detail.Punishment_Frequency</td>

                                }
                                @if (Model.flag[6])
                                {

                                    <td style="width:40px">@item.Discipline_PunishmentTransaction_Detail.penal_des</td>

                                }
                                @if (Model.flag[7])
                                {

                                    <td style="width:40px">@item.status</td>

                                }
                             

                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>

    </section>

</div>


