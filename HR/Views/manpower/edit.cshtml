                            </div>
                            <div class="col-md-2"></div>
                            <div style="margin-top:25px" class="form-group">
                                <div class="col-md-4">
                                    <input id="btnSave" style="width:150px" class="btn btn-success" type="submit" onclick="ch()" value="CREATE" />
                                    <a style="width:150px" href="@Url.Action("index", "manpower")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Back</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>cadre code</span>
                            </label>
                            @*<div class="col-md-4">
                                    @Html.DropDownList("cadre", new SelectList(ViewBag.cadre, "ID", "Code"), "Select cadre", new { @class = "select2", @id = "employee11" })
                                </div>*@
                            <select class="col-md-4 select2" id="employee181"></select>
                            <div class="col-md-4">
                                <input type="button" onclick="add()" style="width:300px" value="Add items" class="btn btn-success " />

                            </div>
                        </div>

                        <ul class="nav nav-tabs bordered">
                            <!-- available classes "bordered", "right-aligned" -->
                            <li class="active">
                                <a href="#Budgetdetails" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">man power plan details</span>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="Budgetdetails" style="overflow: hidden;width: auto;height: auto;">

                                @for(var i =0;i<Model.man_power.items_man_power.Count();i++)
                                {
                                    <div id='manpoweritems' >
                                        @*@Html.HiddenFor(m => m.man_power.items_man_power[i].cadre_code.Code);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].cadre_code.Name);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].current_jobs);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].new_jobs);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].quarter1);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].quarter2);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].quarter3);
                                        @Html.HiddenFor(m => m.man_power.items_man_power[i].quarter4);*@
                                        <input id="class_type" style="margin-bottom: 1em;width:100px"  name="levelcode"  value= '" + @Model.man_power.items_man_power[i].cadre_code.Code + "' readonly='readonly' />" 
                                        <input id="class_type" style="margin-bottom: 1em;width:200px" name="levelcode" value='" + @Model.man_power.items_man_power[i].cadre_code.Name + "' readonly='readonly' />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].current_jobs + "' readonly='readonly' />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].new_jobs + "'  />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].quarter1 + "'  />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].quarter2 + "'  />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].quarter3 + "'  />"
                                        <input id="class_type" style="margin-bottom: 1em;width:70px" name="levelcode" value='" + @Model.man_power.items_man_power[i].quarter4 + "'  />"
                              </div>
                                          }


                            </div>


                        </div>
                    </div>

                }


            </div>
        </div>
    </section>
</div>

<script>
  $(function () {
      CKEDITOR.replace('Description');
  });
</script>
