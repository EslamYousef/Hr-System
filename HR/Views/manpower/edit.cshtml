@model HR.Models.ViewModel.manpowerVM

@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Create man power
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("edit", "personnel_transaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    @Html.AntiForgeryToken()
                    <input name="levelcode" value="" hidden />
                    <input name="levelname" value="" hidden />
                    <input name="count" value="" hidden />
                    <input name="new" value="" hidden />
                    <input name="q1" value="" hidden />
                    <input name="q2" value="" hidden />
                    <input name="q3" value="" hidden />
                    <input name="q4" value="" hidden />
                    @Html.HiddenFor(m => m.man_power.ID);
                    <div class="form-horizontal">
                        <hr />
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span> From Year </span>
                            </label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.man_power.from_year, new { htmlAttributes = new { @class = "form-control", id = "YF", type = "number", @min = "1990",@readonly="readonly" } })
                                @Html.ValidationMessageFor(model => model.man_power.from_year, "", new { @class = "text-danger" })

                            </div>
                            <label class="control-label col-md-2">
                                <span> To Year </span>
                            </label>
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.man_power.to_year, new { htmlAttributes = new { @class = "form-control", id = "YT", type = "number", @min = "1991",@readonly="readonly" } })
                                @Html.ValidationMessageFor(model => model.man_power.to_year, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span>Organization unit</span>
                            </label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.selected_organ, new SelectList(ViewBag.organ, "ID", "Code"), "Select organization", new { @class = "select2", @onchange = "full_level()", @id = "employeeId" })
