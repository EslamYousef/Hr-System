@model HR.Models.penalities.setup.Discipline_Punishment


@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">


    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("Create", "punishment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" />@organ.create</div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "punishment")" class="create-btn"> @pers_2.Back</a></div>
                    </div>
                    <input name="center_id" value="" />
                    
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section style="margin-top:40px" class="content-header">
                            <h1>
                                @pers_2.punishment
                            </h1>
                        </section>
                        <div class="form-group">


                            <div class="col-md-4">

                                <label style="color:red">@organ.code</label>
                                @Html.EditorFor(model => model.Punishment_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Punishment_Code, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label style="color:red">@organ.description</label>
                                @Html.EditorFor(model => model.Punishment_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Punishment_Desc, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label>@organ.AlterunitDescription</label>
                                @Html.EditorFor(model => model.Punishment_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Punishment_AltDesc, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">

                                <label style="color:red">@pers_2.punishmentgroup</label>
                                @Html.DropDownListFor(m => m.PunishmentGroup_Code, new SelectList(ViewBag.group, "ID", "Code"), pers_2.punishmentgroup, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.PunishmentGroup_Code, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-4">

                                <label style="color:red">@pers_2.punishment_rest_options</label>
                                @Html.DropDownListFor(m => m.RestOption_Code, new SelectList(ViewBag.rest, "ID", "Code"), pers_2.punishment_rest_options, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.RestOption_Code, "", new { @class = "text-danger" })
                            </div>
                           
                          



                        </div>
               

                        <ul class="nav nav-tabs bordered">
                            <!-- available classes "bordered", "right-aligned" -->
                            <li class="active">
                                <a href="#homee" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">@pers_2.penalityitems</span>
                                </a>
                            </li>


                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="homee" style="overflow: hidden;width: auto;height: auto;">


                                <div class="form-group">


                                    <div class="col-md-4">
                                        <label>@pers_2.penalityitems</label>
                                        @Html.DropDownList("Q", new SelectList(ViewBag.penality, "ID", "Code"), pers_2.penalityitems, new { @class = "select2", id = "country" })
                                    </div>

                                    
                                    <div class="col-md-4">
                                        <label> - </label>
                                        <input style="width:100%" class="btn btn-success" type="button" value=@pers_2.getemp onclick="getemp()" />

                                    </div>

                                </div>


                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <td hidden></td>
                                            <td>@pers_2.level</td>
                                            <td>@pers_2.penalityitems</td>
                                            <td></td>
                                        </tr>
                                    </thead>
                                    <tbody id="emp2"></tbody>
                                </table>


                            </div>

                        </div>


                    </div>
                }

            </div>

        </div>

    </section>
</div>



