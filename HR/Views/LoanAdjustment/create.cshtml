<script>
    $(function () {
        GetDataById2('@Model.adjustment.TransactionDate', "Contract_start_date_s");
    })
    function change(check)
    {
        if(check.checked==true)
        {
           
            var tr = document.getElementsByClassName("AmountN");
            $.each(tr, function (key, value) {
                debugger
                if (value.disabled == false) {
                    debugger
                    value.checked = true;
                }
                
            });
        }
        else if(check.checked==false)
        {

            var tr = document.getElementsByClassName("AmountN");
            $.each(tr, function (key, value) {
                debugger
                if (value.disabled == false) {
                    debugger
                    value.checked = false;
                }
               

            });
        }
    }
    function GetDataById2(date, id) {

        var valx = new Date(date);
        var month;
        if ((valx.getMonth() + 1) < 10) {
            month = "0" + (valx.getMonth() + 1).toString();
        }
        else {
            month = date.getMonth() + 1;
        }
        var day = parseInt(valx.getDate());
        if (day < 10) {
            day = "0" + (valx.getDate()).toString();
        }
        else {
            day = valx.getDate();
        }
        var d = valx.getFullYear() + '-' + month + '-' + day;
        $('#' + id).val(d);
    }
</script>