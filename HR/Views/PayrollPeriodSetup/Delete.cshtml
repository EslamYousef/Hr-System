@model HR.Models.SetupPayroll.PayrollPeriodSetup

@using HR.Resource;

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


<h3>@Basic.message_delete</h3>
@using (Html.BeginForm("Delete", "PayrollPeriodSetup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }


        <div class="form-group">
            <label class="control-label col-md-2">
                @Payroll.PeriodCode
            </label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.PeriodCode, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Payroll.PeriodDescription          
                </label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.PeriodDesc, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("index","PayrollPeriodSetup")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>
                <input type="submit" value=@Basic.Delete class="btn btn-success" />

            </div>
        </div>
    </div>
}

@section scripts{}