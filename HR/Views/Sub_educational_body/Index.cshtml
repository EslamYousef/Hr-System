@model IEnumerable<HR.Models.Sub_educational_body>
@using HR.Resource;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Sub_educational_body")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Basic.create_new_Qualificationsubprovider1</a>
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>@Basic.code</th>
                            <th>@Basic.name</th>
                            <th>@Basic.description</th>
                            <th>
                                @Basic.MainEducatebody
                            </th>
                            <th>
                                @Basic.Name_of_educational_qualification
                            </th>
                          
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Main_Educate_body.Name</td>
                                <td>
                                    @if (@item.Name_of_educational_qualification == null)
                                    {
                                        <span>Not Linked Yet </span>
                                    }
                                    else
                                    {
                                        @item.Name_of_educational_qualification.Name
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Sub_educational_body", new {id = item.ID})" class="create-btn" style="width:50px"><i class="fa fa-edit"></i>@organ.change</a>
                                    <a href="@Url.Action("delete", "Sub_educational_body", new {id = item.ID})" class="create-btn"><i class="fa fa-trash-o"></i>@Basic.Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                 
                </table>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}

<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb;
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000;
    }

        .create-btn svg {
            color: #0d62aa;
        }
</style>