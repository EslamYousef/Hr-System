@model HR.Controllers.PayrollGeneralSetupVM
@using HR.Resource
@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @pers_2.payrollgeneralsetup
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("edit", "PayrollGeneralSetup", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />
                        <input value="" hidden name="check_A" />
                        @Html.HiddenFor(m => m.PayrollGeneralSetup.ID);
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-md-7"></div>
                            <div class="col-md-2">
                                <input style="width:100%" type="submit" value=@organ.Save class="btn btn-success" />
                            </div>
                            <div class="col-md-2">
                                <a style="width:100%" href="@Url.Action("index","PayrollGeneralSetup")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@pers_2.Back</a>
                            </div>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <ul class="nav nav-tabs bordered">
                            <!-- available classes "bordered", "right-aligned" -->
                            <li class="active">
                                <a href="#General" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">@pers_2.generalsetup</span>
                                </a>
                            </li>
                            <li>
                                <a href="#Rounding" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">@pers_2.roundingsetup</span>
                                </a>
                            </li>
                            <li>
                                <a href="#Death" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">@pers_2.deathdaysetup</span>
                                </a>
                            </li>
                            <li>
                                <a href="#Punishment" data-toggle="tab">
                                    <span class="visible-xs"><i class="entypo-home"></i></span>
                                    <span class="hidden-xs">@pers_2.punishmentrestoption</span>
                                </a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div id="General" class="tab-pane active" style="overflow: hidden;width: auto;height: auto;">

                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.defaultpayrollperiod
                                    </label>
                                    <div class="col-md-3">

                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.DefaultPayrollPeriod, new SelectList(ViewBag.defaultpayrollperiod, "ID", "Code"), pers_2.defaultpayrollperiod, new { @class = "select2" })


                                    </div>
                                    <label class="control-label col-md-2">
                                        @pers_2.accountnumberforaccruedasallery
                                    </label>
                                    <div class="col-md-3">

                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.AccountNumberForNetSalary, new SelectList(ViewBag.accountnumberforaccruedasallery, "ID", "Code"), pers_2.accountnumberforaccruedasallery, new { @class = "select2" })


                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.defaultaccountnumberforaccruedpayment
                                    </label>
                                    <div class="col-md-3">

                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.DefaultAccountNumberForNetPayment, new SelectList(ViewBag.defaultaccountnumberforaccruedpayment, "ID", "Code"), pers_2.defaultaccountnumberforaccruedpayment, new { @class = "select2" })


                                    </div>
                                    <label class="control-label col-md-2">
                                        @pers_2.Basicsallarycode
                                    </label>
                                    <div class="col-md-3">

                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.SalaryCodeID_BasicSalary, new SelectList(ViewBag.Basicsallarycode, "ID", "Code"), pers_2.Basicsallarycode, new { @class = "select2" })


                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.totalexcludedallwencecode
                                    </label>
                                    <div class="col-md-3">

                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.AllowToRounding, new SelectList(ViewBag.totalexcludedallwencecode, "ID", "Code"), pers_2.totalexcludedallwencecode, new { @class = "select2" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.GLcostcenterdistriburionbehavior
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EnumDropDownListFor(m => m.GL_cost_center_distribution_behavior, pers_2.GLcostcenterdistriburionbehavior, new { @class = "select2" })
                                    </div>
                                    <label class="control-label col-md-2">
                                        @pers_2.ERPintegrationtype
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EnumDropDownListFor(m => m.ERP_INTERGRATION_TYPE, pers_2.ERPintegrationtype, new { @class = "select2" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.lenghtoferpsegment
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EditorFor(model => model.PayrollGeneralSetup.Length_Of_Segment, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                    </div>

                                    <label class="control-label col-md-2">
                                        @pers_2.numberoferpsegment
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EditorFor(model => model.PayrollGeneralSetup.Number_Of_Account_Segments, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                    </div>

                                </div>
                                <div class="form-group">

                                    <label class="control-label col-md-2">
                                        @pers_2.checktype
                                    </label>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.Type_Code, new SelectList(ViewBag.checktype, "ID", "Code"), pers_2.shiftsetup, new { @class = "select2" })
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="Rounding" style="overflow: hidden;width: auto;height: auto;">
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.roundingmethd
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EnumDropDownListFor(m => m.Rounding_method, pers_2.roundingmethd, new { @class = "select2" })
                                    </div>
                                    <label class="control-label col-md-2">

                                        @pers_2.value
                                    </label>
                                    <div class="col-md-3">
                                        @Html.EditorFor(model => model.PayrollGeneralSetup.Value, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2"></div>
                                    @if (Model.PayrollGeneralSetup.AllowToRounding == true)
                                    {
                                        <div class="col-md-1">
                                            <input type="checkbox" value="on" checked class="icheck" name="check_A" id="ch3" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-1">
                                            <input type="checkbox" value="on" class="icheck" name="check_A" id="ch3" />
                                        </div>
                                    }


                                    <label class="control-label col-md-2">
                                        @pers_2.allowtoroundingdifferenttosettled
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.earnedsallarycode
                                    </label>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.SalaryCodeID_E, new SelectList(ViewBag.earnedsallarycode, "ID", "Code"), pers_2.earnedsallarycode, new { @class = "select2" })
                                    </div>
                                    <label class="control-label col-md-2">
                                        @pers_2.deductedsallerycode
                                    </label>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.SalaryCodeID_D, new SelectList(ViewBag.deductedsallerycode, "ID", "Code"), pers_2.deductedsallerycode, new { @class = "select2" })
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="Death" style="overflow: hidden;width: auto;height: auto;">
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.Deathdaysallarycode
                                    </label>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.SalaryCodeID_DeathDate, new SelectList(ViewBag.Deathdaysallarycode, "ID", "Code"), pers_2.Deathdaysallarycode, new { @class = "select2" })
                                    </div>
                                    <label class="control-label col-md-2">
                                        @pers_2.deathdaysubscriptioncode
                                    </label>
                                    <div class="col-md-3">
                                        @Html.DropDownListFor(m => m.PayrollGeneralSetup.Subscription_Code_DeathDate, new SelectList(ViewBag.deathdaysubscriptioncode, "ID", "Code"), @pers_2.deathdaysubscriptioncode, new { @class = "select2" })
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="Punishment" style="overflow: hidden;width: auto;height: auto;">
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.restonthefirstpunishment
                                    </label>
                                    @if (Model.PayrollGeneralSetup.Rest_On_The_First_Punishment == true)
                                    {
                                        <div class="col-md-8">
                                            <input type="radio" id="ch2" class="icheck" value="first" name="check_B" checked />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-8">
                                            <input type="radio" id="ch2" class="icheck" value="first" name="check_B" />
                                        </div>
                                    }

                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        @pers_2.restonlatpunishment
                                    </label>
                                    @if (Model.PayrollGeneralSetup.Rest_On_The_Last_Punishment == true)
                                    {
                                        <div class="col-md-8">
                                            <input type="radio" class="icheck" value="last" name="check_B" id="ch2" checked />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-8">
                                            <input type="radio" class="icheck" value="last" name="check_B" id="ch2" />
                                        </div>
                                    }


                                </div>
                            </div>
                        </div>
                    </div>


                }

            </div>

        </div>

    </section>
</div>
@section scripts{}
