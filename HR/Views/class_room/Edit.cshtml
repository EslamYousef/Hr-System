@model HR.Models.Training.setup.ClassRoom
@using HR.Resource;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

  

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Edit", "class_room", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit"  class="create-btn"  />@organ.Save    </div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "class_room")" class="create-btn">@pers_2.new_</a></div>
                        <div><i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","class_room")" class="create-btn" value=@organ.delete /></div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "class_room")" class="create-btn"> @pers_2.Back</a></div>
                    
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section style="margin-top:40px" class="content-header">
                            <h1>
                                @training.class_room
                            </h1>
                        </section>
                        <div class="form-group">
                            <div class="col-md-4">

                                <label style="color:red">@organ.code</label>
                                @Html.EditorFor(model => model.ClassRoom_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ClassRoom_Code, "", new { @class = "text-danger" })
                            </div>
                       
                            <div class="col-md-4">

                                <label style="color:red">@organ.description</label>
                                @Html.EditorFor(model => model.ClassRoom_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ClassRoom_Desc, "", new { @class = "text-danger" })
                            </div>
                     
                            <div class="col-md-4">

                                <label>@organ.AlterunitDescription</label>
                                @Html.EditorFor(model => model.ClassRoom_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ClassRoom_AltDesc, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label>@training.Maximum_Capacity</label>
                                @Html.EditorFor(model => model.Maximum_Capacity, new { htmlAttributes = new { @type= "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Maximum_Capacity, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label>@training.Maximum_Occupancy</label>
                                @Html.EditorFor(model => model.Maximum_Occupancy, new { htmlAttributes = new {@type="number",@min="0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Maximum_Occupancy, "", new { @class = "text-danger" })
                            </div>
                          
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label>
                                    @training.Trainigcenter
                                </label>
                                @Html.DropDownListFor(m => m.TrainingCenters_Code, new SelectList(ViewBag.centers, "ID", "Code"), training.Trainigcenter, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.TrainingCenters_Code, "", new { @class = "text-danger" })
                              
                            </div>
                            <div class="col-md-4">
                                <label>
                                    @training.centerbranches
                                </label>
                                @Html.DropDownListFor(m => m.Branch_Code, new SelectList(ViewBag.branches, "ID", "Code"), training.centerbranches, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.Branch_Code, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-md-4">
                                <label style="color:red">
                                    @training.classroomgroup
                                </label>
                                @Html.DropDownListFor(m => m.ClassRoom_Group_Code, new SelectList(ViewBag.class_group, "ID", "Code"), training.classroomgroup, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.ClassRoom_Group_Code, "", new { @class = "text-danger" })

                            </div>
                        </div>
                       
                    </div>
                }

            </div>

        </div>

    </section>
</div>



