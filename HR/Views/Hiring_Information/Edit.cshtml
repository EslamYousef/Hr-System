@model HR.Models.Application.Hiring_Information
@using HR.Resource;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Personnel.CreateEmployeeBeneficiaryProfile
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("Edit", "Hiring_Information", new { id2 = ViewBag.idemp }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Committe Resolution No.</label>
                                <div class="col-md-3">
                                    <input type="text" value="@ViewBag.ApplicationCode" disabled />
                                </div>
                                <label class="control-label col-md-1">Application Id</label>
                                <div class="col-md-3">
                                    <input type="text" value="@ViewBag.ApplicationApp" disabled />
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" id="btnSubmit" name="Command" value="Submit" class="btn btn-success">Committe_Resolution_Recuirtment</button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Committee_Recommendation</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Committee_Recommendation, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Committee_Recommendation, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2">Final Medical Test</label>
                                <div class="col-md-3">
                                    @Html.EnumDropDownListFor(model => model.Medical_commite_recomindation, new { @class = "select2" })
                                    @Html.ValidationMessageFor(model => model.Medical_commite_recomindation, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Employee_ID</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Employee_ID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Employee_ID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.HireDate</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.HireDate, new { htmlAttributes = new { @class = "form-control StartDate yy dt", @id = "HireDate", @autocomplete = "off", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.HireDate, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">@Personnel.JoinDate</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.JoinDate, new { htmlAttributes = new { @class = "form-control EndDate yyy dt ", @id = "JoinDate", @autocomplete = "off", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Oil Sector JoinDate</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.OilSectorJoinDate, new { htmlAttributes = new { @class = "form-control StartDate yy dt", @id = "OilSectorJoinDate", @autocomplete = "off", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.OilSectorJoinDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">SocialInsuranceNum</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.SocialInsuranceNum, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.SocialInsuranceNum, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">SocialInsuranceDate</label>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.SocialInsuranceDate, new { htmlAttributes = new { @class = "form-control StartDate yy dt", @id = "SocialInsuranceDate", @autocomplete = "off", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.SocialInsuranceDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-1">Service_Period_Ins_Y</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Service_Period_Ins_Y, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Service_Period_Ins_Y, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-1">Service_Period_Ins_M</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Service_Period_Ins_M, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Service_Period_Ins_M, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">WeekendCode</label>
                                <div class="col-md-3">
                                    @Html.DropDownListFor(m => m.WeekendCodeId, new SelectList(ViewBag.Weekendsetup, "ID", "Code"), Personnel.SelectNationality, new { @class = "select2", @onchange = "Nationality()", @id = "nationality" })
                                    @Html.ValidationMessageFor(model => model.WeekendCodeId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("index","Application",new {id=ViewBag.idemp})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                    <input type="submit" value="@Personnel.Create" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>
    </section>
</div>

@section scripts{}
<script>
    $(document).ready(function () {
        debugger
        GetDataById2('@Model.HireDate', "HireDate");
        GetDataById2('@Model.JoinDate', "JoinDate");
        GetDataById2('@Model.OilSectorJoinDate', "OilSectorJoinDate");
        GetDataById2('@Model.SocialInsuranceDate', "SocialInsuranceDate");
    });

</script>
<script>
    function Nationality() {

        var id = $("#nationality").val();
        $.ajax({
            type: "post",
            url: "/Helper/GetWeekendsetup",
            data: { "id": id },
            success: function (result) {

                $("#NationalityName").val(result.Description);
            },
            error: function () {

                $("#NationalityName").val(" ");
            }
        });
    }

    function GetDataById2(date, id) {
        debugger
        var valx = new Date(date);
        var month;
        if ((valx.getMonth() + 1) < 10) {
            month = "0" + (valx.getMonth() + 1).toString();
        }
        else {
            month = date.getMonth() + 1;
        }
        var day = parseInt(valx.getDate());
        if (day < 10) {
            day = "0" + (valx.getDate()).toString();
        }
        else {
            day = valx.getDate();
        }
        var d = valx.getFullYear() + '-' + month + '-' + day;
        $('#' + id).val(d);
    }

</script>
