@model IEnumerable<HR.Models.Public_Holidays_Dates>

@using HR.Resource;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Public_Holidays_Dates")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewVacationsSetup</a>
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>@Personnel.HolidaysCode</th>
                            <th>@Personnel.Holidaydescription</th>
                            <th>@Personnel.Holidayalternativedescription</th>
                            <th>@Personnel.HolidayEventCode</th>
                            <th>@Personnel.HolidayEventDescription</th>
                            <th>@Personnel.Fromdate</th>
                            <th>@Personnel.Todate</th>
                            <th>@Personnel.Notes</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Holidays_Code</td>
                                <td>@item.Holiday_description</td>
                                <td>@item.Holiday_alternative_description</td>
                                <td>@item.Public_Holiday_Events.Description</td>
                                @*<td>@item.Append_Public_Holidays_Dates.HolidayEventDescription</td>
                                <td>@item.Append_Public_Holidays_Dates.Fromdate</td>
                                <td>@item.Append_Public_Holidays_Dates.Todate</td>
                                <td>@item.Append_Public_Holidays_Dates.Notes</td>*@

                                <td>
                                    <a href="@Url.Action("Edit", "Public_Holidays_Dates", new {id = item.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>@Personnel.Edit1</a>
                                    <a href="@Url.Action("Delete", "Public_Holidays_Dates", new {id = item.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}