</script>

@using HR.Resource;
<div class="content-wrapper">
    <!-- Main content -->
    <div class="form-group">
        <div class="col-md-5">
        </div>
        <div class="col-md-6">
            <h1>@Payroll.TransactionEntry</h1>
        </div>
    </div>
    <section class="content">

        <div class="box">

