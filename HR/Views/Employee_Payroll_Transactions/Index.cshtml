                    $("#tbody11").append(tr);
                });
                function AddLeadingZeros(number, size) {
                    debugger
                    var s = "0000" + number;
                    return s.substr(s.length - size);

                }
            },
            error: function () {


            }
        });
    }

    function change(id) {
        window.open("/Employee_Payroll_Transactions/Edit?id=" + id);
