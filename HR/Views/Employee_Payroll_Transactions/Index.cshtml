            <div class="box-body">
                <div class="row">
                    <a href="@Url.Action("Create", "Employee_Payroll_Transactions" )" style="width:180px;margin-left:10px" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>'@Payroll.AddNewTransactionEntry</a>

                </div>
