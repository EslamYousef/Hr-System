@model HR.Models.Allowance_years
@using HR.Resource;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Personnel.EditAllowanceYearsSetup
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("Edit", "Allowance_years", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Message"]
                        </div>
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">@Personnel.AllowanceYear</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.Allowance_year, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = '1' } })
                            @Html.ValidationMessageFor(model => model.Allowance_year, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">@Personnel.AllowancePercentage</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.Allowance_percentage, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = '1' } })
                            @Html.ValidationMessageFor(model => model.Allowance_percentage, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Personnel.MinAllowanceAmount</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.min_Allowance_amount, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = '1' } })
                            @Html.ValidationMessageFor(model => model.min_Allowance_amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Personnel.MaxAllowanceAmount</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.max_Allowance_amount, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = '1' } })
                            @Html.ValidationMessageFor(model => model.max_Allowance_amount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <a href="@Url.Action("index","Allowance_years")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                            <button type="submit" id="btnSave" class="btn btn-success" name="Command" value="Save">@Personnel.Edit</button>
                        </div>
                    </div>

                </div>
                }

            </div>

        </div>

    </section>
</div>


@section scripts{}