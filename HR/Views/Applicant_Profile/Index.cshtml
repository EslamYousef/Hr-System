@model IEnumerable<HR.Models.Applicant_Profile>
@using HR.Resource;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<div class="form-group">
    <div class="col-md-5">
    </div>
    <div class="col-md-6">
        <h1>@Personnel.ApplicantProfile</h1>
    </div>
</div>
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="form-group">
                <div class="box-header">

                    <div class="col-md-2">
                        <p class="lead">
                            <a href="@Url.Action("Create", "Applicant_Profile")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewApplicantProfile </a>
                        </p>
                    </div>
                </div>
                @*<div class="col-md-8"></div>
                <div class="col-md-2">
                    <p class="lead">
                        <a href="@Url.Action("History", "Applicant_Profile")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.History </a>
                    </p>
                </div>*@
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>@Personnel.ApplicantNo</th>
                            <th>@Personnel.FullName</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Full_Name</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Applicant_Profile", new {id = item.ID})" class="create-btn" style="width:80px"><i class="fa fa-edit"></i>@Personnel.Edit1</a>
                                    <a href="@Url.Action("Delete", "Applicant_Profile", new {id = item.ID})" class="create-btn" style="width:80px"><i class="far fa-trash-alt"></i>@Personnel.Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>

    </section>

</div>
@section scripts{}

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000
    }

        .create-btn svg {
            color: #0d62aa
        }
</style>