@model HR.Models.Budget
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
@using HR.Resource;
<h3>@organ.message_delete</h3>
@using (Html.BeginForm("Delete", "Budget", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@organ.delete class="btn btn-success" />
                <a href="@Url.Action("index", "Budget")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@organ.Back</a>

            </div>
        </div>
    </div>
}
@section scripts{}
