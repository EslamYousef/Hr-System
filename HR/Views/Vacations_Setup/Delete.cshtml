@model HR.Models.Vacations_Setup
@using HR.Resource;
@{
    ViewBag.Title = @Personnel.Delete;
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<h3>@Basic.message_delete</h3>
@using (Html.BeginForm("Delete", "Vacations_Setup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }

        <div class="form-group">

            <label class="control-label col-md-2">
                @Personnel.LeaveTypeCode
            </label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LeaveTypeCode, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">
                @Personnel.LeaveTypeNameEnglish
            </label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LeaveTypeNameEnglish, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                @Personnel.LeaveTypeNameArabic
            </label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LeaveTypeNameArabic, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <a href="@Url.Action("index","Vacations_Setup")" class="btn btn-danger btn-sm">@Personnel.Back
                    <i class="fa fa-trash-o"></i>
                </a>
                <input type="submit" value= @Personnel.Delete class="btn btn-success" />
           

            </div>
        </div>
    </div>
}
@section scripts{}