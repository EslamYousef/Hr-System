@model HR.Models.Application.Basic_Salary_Calculation_Result
@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

  

    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("Create", "Basic_Salary_Calculation_Result", new { id2 = ViewBag.idemp }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" />@organ.create</div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "Basic_Salary_Calculation_Result")" class="create-btn">@pers_2.new_</a></div>
                        <div>
                            <i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","Basic_Salary_Calculation_Result")" class="create-btn" value=@organ.delete style="
    background-color: transparent" ; />
                        </div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index","Application",new {id=ViewBag.idemp})" class="create-btn"> @pers_2.Back</a></div>
                    </div>
                    <hr /><hr /><hr />
                    <section class="content-header">
                        <h1>
                            @Personnel.CreateBasicSalaryCalculationResult
                        </h1>
                    </section>
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                        <div>
                            <div class="form-group">
                                <label class="control-label col-md-2"style="color:red">@Personnel.CommitteResolutionNo</label>
                                <div class="col-md-3">
                                    <input type="text" value="@ViewBag.ApplicationCode" disabled />
                                </div>
                                <label class="control-label col-md-2"style="color:red">@Personnel.ApplicantId</label>
                                <div class="col-md-3">
                                    <input type="text" value="@ViewBag.ApplicationApp" disabled />
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" id="btnSubmit" name="Command" value="Submit" class="btn btn-success">@Personnel.Application</button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.StartBasicSalary</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Start_Basic_Salary, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Start_Basic_Salary, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">@Personnel.BasicSalary_A</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Basic_Salary_A, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Basic_Salary_A, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.OtherAllowance</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Other_Allowance, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Other_Allowance, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.TotalIncludedAllowances</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Total_Included_Allowances, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Total_Included_Allowances, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">@Personnel.TotalExecludedAllowances</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Total_Execluded_Allowances, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Total_Execluded_Allowances, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.TotalBasicSalary</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Total_Basic_Salary, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Total_Basic_Salary, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">@Personnel.TotalRemuneration</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Total_Remuneration, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Total_Remuneration, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">@Personnel.InsuranceBasicSalary</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Insurance_Basic_Salary, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Insurance_Basic_Salary, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label col-md-2">@Personnel.InsuranceVariableSalary</label>
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Insurance_Variable_Salary, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 0 } })
                                    @Html.ValidationMessageFor(model => model.Insurance_Variable_Salary, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" hidden>
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("index","Application",new {id=ViewBag.idemp})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                    <input type="submit" value="@Personnel.Create" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>
    </section>
</div>

