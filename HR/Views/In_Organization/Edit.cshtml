                        <input name="JobCode" hidden />
                        <input name="JobDescription" hidden />
                        <input name="CadreCode" hidden />
                        <input name="CadreDescription" hidden />
                        <input name="OrgCode" hidden />
                        <input name="OrgDescription" hidden />

                        <div>


                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>@Personnel.CommitteResolutionNo</label>
                                    <input type="text" value="@ViewBag.Committe_Resolution_Recuirtment" disabled style="margin-bottom: 15px;" />
                                </div>
                               
                                <div class="col-md-4">
                                    <label>
                                        @Personnel.Job
                                    </label>
                                    @Html.DropDownList("fd", new SelectList(ViewBag.job_title_cards, "ID", "Code"), Personnel.SelectJob, new { @required = "required", @class = "select2", @onchange = "employee3()", id = "employeeId3" })
                                </div>
                                <div class="col-md-4">
                                    <input type="button" value="@Personnel.Add" id="ss" style="margin-top: 30px;" />
                                </div>
                            </div>
                            <table id="tb-family" border="1" style="display: table; width:400px;">
                                <thead>
                                    <tr>
                                        <th id="fa">@Personnel.JobCode</th>
                                        <th id="na">@Personnel.JobDescription</th>
                                        <th id="per">@Personnel.CadreCode</th>
                                        <th id="De">@Personnel.Cadre</th>
                                        <th id="No">@Personnel.OrgUnitCode</th>
                                        <th id="No2">@Personnel.OrgUnitDescription</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (var i = 0; i < Model.Committe_Resolution_Recuirtment.In_Organization.Count(); i++)

                                    {

                                        <tr>

                                            <td>
                                                <input name="JobCode" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Job_Code" readonly />
                                            </td>
                                            <td>
                                                <input name="JobDescription" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Job_Description" readonly />
                                            </td>
                                            <td>
                                                <input name="CadreCode" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Cadre_Code" readonly />
                                            </td>
                                            <td>
                                                <input name="CadreDescription" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Cadre" readonly />
                                            </td>
                                            <td>
                                                <input name="OrgCode" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Org_Unit_Code" readonly />
                                            </td>
                                            <td>
                                                <input name="OrgDescription" type="text" value="@Model.Committe_Resolution_Recuirtment.In_Organization[i].Org_Unit_Description" readonly />
                                            </td>

                                            <td>
                                                <input type="button" value="@Personnel.Delete" class="del-btn" onclick="Remove($(this))" id="tt" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="form-group" hidden>
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="@Personnel.Edit1" class="btn btn-success" />
                                    <a href="@Url.Action("index","Committe_Resolution_Recuirtment",new {id=ViewBag.idemp})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                </div>
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>
    </section>
</div>

@section scripts{}

<script>
    function Remove(thi) {
        debugger
        thi.closest('tr').remove();
    }

    function employee3() {

        var id = $("#employeeId3").val();
        $.ajax({
            type: "post",
            url: "/Helper/GetJobtitle",
            data: { "id": id },
            async: false,
            success: function (result) {

            },
            error: function () {

            }
        });
    }
</script>
<script>

    $(function () {
        //$("#tb-family").hide();
        $("#ss").click(function () {

            var Family_profile = $("#employeeId3").val();
            $.ajax({
                type: "post",
                url: "/Helper/GetDataByJobTitle",
                data: { "id": Family_profile },
                async: false,
                success: function (result) {
                    debugger
                    $.each(result, function (i, r) {
                        if (Family_profile != "") {
                            $("#tb-family").show();
                            var T = "";
                             T = "<tr><td><input type='text' readonly name='JobCode' value='" + r.Code + "'/></td><td><input type='text' readonly name='JobDescription' value='" + r.name + "'/></td><td><input type='text' name='CadreCode' readonly value='" + r.job_level_setup.ID + "' /></td><td><input type='text' name='CadreDescription' readonly value='" + r.job_level_setup.Name + "' /></td><td><input type='text' name='OrgCode' readonly value='" + r.Organization_Chart.ID + "' /></td><td><input type='text' name='OrgDescription' readonly value='" + r.Organization_Chart.unit_Description + "' /></td><td><input type='button' class='del-btn tb-btn' value='@Personnel.Delete'/></td></tr>"
                            $("#tb-family").append(T)
                        }
                    })
                }
            })
            $("#tb-family").on('click', '.del-btn', function () {
               $(this).closest('tr').remove();

            })

        })
    });
</script>
