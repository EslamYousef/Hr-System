@model HR.Models.Employee_Profile
@using HR.Resource;

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<h3>@Personnel.message_delete</h3>
@using (Html.BeginForm("Delete", "Employee_Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }
<div>

    @Html.HiddenFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @Html.HiddenFor(model => model.Ability.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @Html.HiddenFor(model => model.Service_Information.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @*@Html.HiddenFor(model => model.Employee_Address_Profile.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })*@
    @Html.HiddenFor(model => model.Personnel_Information.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @*@Html.HiddenFor(model => model.Employee_Positions_Profile.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })*@
    @Html.HiddenFor(model => model.Position_Transaction_Information.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @Html.HiddenFor(model => model.Employee_Qualification_Profile.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
    @Html.HiddenFor(model => model.Employee_experience_profile.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })


    @*@Html.HiddenFor(model => model.Employee_family_profile.ID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })*@


</div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Personnel.Delete" class="btn btn-success" />
                <a href="@Url.Action("index","Employee_Profile")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>

            </div>
        </div>
    </div>
}@section scripts{}
