<script>
    $(function () {

        function CheckOnName() {
             
            var FullName = $("#full").val().split(' ');

            if (FullName.length > 0)
            {
                $("#name1").val(FullName[0]);

                $("#name2").val(FullName[1]);
                $("#name3").val(FullName[2]);
                $("#name4").val(FullName[3]);
                $("#name5").val(FullName[4]);
            }
        }
        CheckOnName();
        function CheckOnName2() {
             
            var FullName2 = $("#full2").val().split(' ');

            if (FullName2.length > 0) {
                $("#arabic1").val(FullName2[0]);

                $("#arabic2").val(FullName2[1]);
                $("#arabic3").val(FullName2[2]);
                $("#arabic4").val(FullName2[3]);
                $("#arabic5").val(FullName2[4]);
            }
        }
        CheckOnName2();
        $("#name1,#name2,#name3,#name4,#name5").keyup(function (w) {
            var x = $("#name1").val();
            var y = $("#name2").val();
            var q = $("#name3").val();
            var w = $("#name4").val();
            var e = $("#name5").val();
            $("#full").val(x + " " + y+ " " +q+ " " +w+ " " +e);
        });


        $("#arabic1,#arabic2,#arabic3,#arabic4,#arabic5").keyup(function (w) {
            var x = $("#arabic1").val();
            var y = $("#arabic2").val();
