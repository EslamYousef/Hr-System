                                                <td>
                                                    <select name='TestResult'>
                                                        <option selected value='0'>Fit</option>
                                                        <option value='1'>Not Fit</option>
                                                    </select>
                                                </td>
                                            }
                                            else if (item.Test_Result == "1")
                                            {

