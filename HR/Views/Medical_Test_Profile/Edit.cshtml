                                                    <select name='TestResult'>
                                                        <option value='0'> Fit</option>
                                                        <option selected value='1'> Not Fit </option>
                                                    </select>
                                                </td>
                                            }
                                            <td>
                                                <input name="NotFitReason" type="text" value="@item.Not_Fit_Reason" />
                                            </td>
                                            <td>
                                                <input name="Comments" type="text" value="@item.Comments" />
                                            </td>
                                            @if (item.Final_Test_Result == "0")
                                            {
                                                <td>
                                                    <select name='FinalTestResult'>
                                                        <option selected value='0'>Fit</option>
                                                        <option value='1'>Not Fit</option>
                                                    </select>
                                                </td>
                                            }
                                            else if (item.Final_Test_Result == "1")
                                            {

                                                <td>
                                                    <select name='FinalTestResult'>
                                                        <option value='0'> Fit</option>
                                                        <option selected value='1'> Not Fit </option>
                                                    </select>
                                                </td>
                                            }
                                            <td>
                                                <input type="button" value="@Personnel.Delete" class="del-btn" onclick="Remove($(this))" id="tt" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="form-group" hidden>
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("index","Application",new {id=ViewBag.idemp})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                    <input type="submit" value="@Personnel.Edit1" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    </div>

                }

