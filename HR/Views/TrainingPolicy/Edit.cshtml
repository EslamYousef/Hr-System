<script>
    function check(checkbox,id) {
        debugger
        if (checkbox.checked == true) {
            $('#'+id).removeAttr('disabled');
        }
        else {
            $('#' + id).val(0);
            $('#'+id).attr('disabled', true);


        }
    }
    $("#year1").keyup(function (e) {
        var value = $("#year1").val();
        $("#next_year").val(parseInt(parseInt(value) + parseInt(1)));
    });


</script>


<script>
    $(function () {
        var a1 = document.getElementById("c2");
        var a2 = document.getElementById("c3");
        var a3 = document.getElementById("c4");
        var a4 = document.getElementById("c5");
        check(a1, "c2N2");
        check(a2, "c3N3");
        check(a3, "c4N4");
        check(a4, "c5N5");

        $("#next_year").val(parseInt(@Model.Year)  + parseInt(1));
    })
</script>