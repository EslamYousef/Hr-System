@model HR.Models.SetupPayroll.Branch

@using HR.Resource;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Payroll.CreateBranches
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "Branch", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(a => a.ID)

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.BankCode
                            </label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.Bank_Code, new SelectList(ViewBag.Bank, "ID", "Code"), Payroll.SelectBank, new { @class = "select2", @onchange = "CountryName()", @id = "Country" })
                                @Html.ValidationMessageFor(model => model.Bank_Code, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.Code
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Branch_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Branch_Code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.Description
                            </label> <div class="col-md-4">
                                @Html.EditorFor(model => model.Branch_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Branch_Desc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.AlternativeDescription
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Branch_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Branch_AltDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                @Payroll.Swiftnumber
                            </label> <div class="col-md-4">
                                @Html.EditorFor(model => model.Swift_Number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Swift_Number, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a href="@Url.Action("index","Branch")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>
                                <input type="submit" value=@Basic.Create class="btn btn-success" />

                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>
@section scripts{}

<script>
    function CountryName()
    {

        var id= $("#Country").val();
        $.ajax({
            type: "post",
            url: "/Helper/GetBank",
            data: { "id": id },
            success: function (result) {

                $("#countryname").val(result.Name);
            },
            error: function () {

                $("#countryname").val(" ");
            }
        });
    }
    CountryName();
</script>
