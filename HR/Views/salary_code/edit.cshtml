<script>
    $(function () {
        var a1 = document.getElementById("ch3");
        var a2 = document.getElementById("c5");
        var a3 = document.getElementById("c6");
        var a4 = document.getElementById("c4");
        check1(a1);
        check2(a2);
        check3(a3);
        check4(a4);
    })
    function dis()
    {
        var val = $("#Country78").val();
        if(val=="1")
        {
            $("#ass").removeAttr('disabled');
        }
        else
        {
            $("#ass").attr('disabled', true);
        }
    }
    function check1(checkbox) {
        if (checkbox.checked == true) {

            $("#c1").removeAttr('disabled');
            document.getElementById('c11').style.color = 'red';
        }
        else {
            $("#c1").attr('disabled', true);

            document.getElementById('c11').style.color = 'gray';
        }
    }
    function check2(checkbox) {
        if (checkbox.checked == true) {

            $("#C2").removeAttr('disabled');
        }
        else {
            $("#C2").attr('disabled', true);

        }
    }
    function check3(checkbox) {
        if (checkbox.checked == true) {

            $("#c44").removeAttr('disabled');
            $("#c55").removeAttr('disabled');
        }
        else {
            $("#c44").attr('disabled', true);
            $("#c55").attr('disabled', true);

        }
    }
    function check4(checkbox) {
        if (checkbox.checked == true) {

            $("#C4").removeAttr('disabled');
            $("#C5").removeAttr('disabled');
            document.getElementById('c22').style.color = 'red';
            document.getElementById('c33').style.color = 'red';
        }
        else {
            $("#C4").attr('disabled', true);
            $("#C5").attr('disabled', true);
            document.getElementById('c22').style.color = 'gray';
            document.getElementById('c33').style.color = 'gray';

        }
    }
</script>
