@model HR.Models.EOS_Interview_Questions_Groups
@using HR.Resource;

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<h3>@Personnel.message_delete</h3>
@using (Html.BeginForm("Delete", "EOS_Interview_Questions_Groups", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @TempData["Message"]
            </div>
        }
        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.QuestionsGroupCode</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Questions_Group_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">@Personnel.Descriptionof</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Description_of, new { htmlAttributes = new { @class = "form-control", @readonly = true } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Personnel.Delete" class="btn btn-success" />
                <a href="@Url.Action("index","Employee_Profile_Groups")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>


            </div>
        </div>
    </div>
}
@section scripts{}