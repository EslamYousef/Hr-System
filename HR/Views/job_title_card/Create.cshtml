                $(".e2").append(seconddrop3);
                $(".e2").append(seconddrop4);
                $(".e2").append(seconddrop5);
                $(".e2").append(seconddrop6);
                $(".e2").append(seconddrop7);
                if (num > 1) {
                    //  $("#generateenum").prop('disabled', true);
