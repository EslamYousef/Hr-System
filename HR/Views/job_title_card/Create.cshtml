                $(".e1").append(seconddrop1);
                $(".e1").append(seconddrop2);
                var seconddrop1 = "<option value='" + 1 + "' >" + "[  " + "created" + " ]</option>";
                var seconddrop2 = "<option value='" + 2 + "' >" + "[  " + "Report_as_ready" + " ]</option>";
                var seconddrop3 = "<option value='" + 3 + "' >" + "[  " + "Approved" + " ]</option>";
