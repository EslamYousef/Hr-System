@model IEnumerable<HR.Controllers.Vacations.LeavesTransactionBalanceController.VM_LeavesTransactionBalance>

@using HR.Resource;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<div class="form-group">
    <div class="col-md-5">
    </div>
    <div class="col-md-6">
        <h1>@Personnel.LeavesBalanceTransaction</h1>
    </div>
</div>
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "LeavesTransactionBalance")" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewLeavesBalanceTransaction</a>
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>@Personnel.SerialSheet </th>
                            <th>@Personnel.EmployeeName</th>
                            <th>@Personnel.LeaveTypeNameEnglish</th>
                            <th>@Personnel.TransactionDate</th>
                            <th>@Personnel.Balance</th>
                            <th>@Personnel.Value</th>
                            <th>@Personnel.Remain</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.LeavesTransactionBalance.Serial_LB</td>
                            <td>@item.EmployeeName</td>
                            <td>@item.Vacations_Setup</td>
                            <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.LeavesTransactionBalance.TransactionDate))</td>
                            <td>@item.LeavesTransactionBalance.Balance</td>
                            <td>@item.LeavesTransactionBalance.Value</td>
                            <td>@item.LeavesTransactionBalance.Remain</td>

                            <td>
                                @*<a href="@Url.Action("Edit", "Vacations_Setup", new {id = item.ID})" class="create-btn" style="width:50px"><i class="fa fa-edit"></i>@Personnel.Edit1</a>*@
                                <a href="@Url.Action("Delete", "LeavesTransactionBalance", new {id = item.LeavesTransactionBalance.ID})" class="create-btn"><i class="far fa-trash-alt"></i>@Personnel.Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order": 1
        });
    });
</script>

@section scripts{}
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000
    }

        .create-btn svg {
            color: #0d62aa
        }
</style>