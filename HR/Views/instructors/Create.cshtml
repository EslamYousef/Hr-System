                                        <div class="col-md-4">
                                            <label>
                                                @Basic.Country
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.CountryCode, new SelectList(ViewBag.country, "ID", "Code"), Basic.Country, new { @class = "select2", @onchange = "CountryName()", id = "country" })
                                            @Html.ValidationMessageFor(model => model.Instructor.CountryCode, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="countryname" disabled />

                                        </div>


                                        <div class="col-md-4">
                                            <label>
                                                @Basic.Region
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.Region_Code, new SelectList(ViewBag.area, "ID", "Code"), Basic.Region, new { @class = "select2", @onchange = "areaName()", id = "area", @disabled = true })
                                            @Html.ValidationMessageFor(model => model.Instructor.Region_Code, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="areaname" disabled />

                                        </div>


                                        <div class="col-md-4">
                                            <label>
                                                @Basic.State
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.State_Governorate_Code, new SelectList(ViewBag.state, "ID", "Code"), Basic.State, new { @class = "select2", @onchange = "getstate()", id = "state", @disabled = true })
                                            @Html.ValidationMessageFor(model => model.Instructor.State_Governorate_Code, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="statename" disabled />

                                        </div>


                                        <div class="col-md-4">
                                            <label>
                                                @Basic.County
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.County_Code, new SelectList(ViewBag.ter, "ID", "Code"), Basic.County, new { @class = "select2", @onchange = "getter()", id = "ter", @disabled = true })
                                            @Html.ValidationMessageFor(model => model.Instructor.County_Code, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="tername" disabled />

                                        </div>


                                        <div class="col-md-4">
                                            <label >
                                                @Basic.City
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.City_Code, new SelectList(ViewBag.city, "ID", "Code"), Basic.City, new { @class = "select2", @onchange = "getcity()", id = "city", @disabled = true })
                                            @Html.ValidationMessageFor(model => model.Instructor.City_Code, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="cityname" disabled />

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <label >
                                                @Basic.Postal_code
                                            </label>
                                            @Html.DropDownListFor(m => m.Instructor.Zip_Postal_Code, new SelectList(ViewBag.postal, "ID", "Code"), Basic.Postal_code, new { @class = "select2", id = "postal", @disabled = true })
                                            @Html.ValidationMessageFor(model => model.Instructor.Zip_Postal_Code, "", new { @class = "text-danger" })
                                            <input type="hidden" value=" " class="form-control" id="cityname" disabled />

                                        </div>
                                        <div class="col-md-4">

                                            <label >@Basic.street_name</label>
                                            @Html.EditorFor(model => model.Instructor.Street_Name, new { htmlAttributes = new {  @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Instructor.Street_Name, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="col-md-4">

                                            <label >@training.street_number</label>
                                            @Html.EditorFor(model => model.Instructor.StreetNumber, new { htmlAttributes = new { @type="number",@min="0",@class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Instructor.StreetNumber, "", new { @class = "text-danger" })
                                        </div>


                                        <div class="col-md-4">

                                            <label>@training.p0x</label>
                                            @Html.EditorFor(model => model.Instructor.PO_Box, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Instructor.PO_Box, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                </div>
                                <div class="tab-pane" id="profile">

                                    <div class="form-group">


                                        <div class="col-md-4">
                                            <label>@Basic.contactmethod</label>
                                            @Html.DropDownList("category", new SelectList(ViewBag.contact_method, "ID", "Code"), @Basic.contactmethod, new { @class = "select2", id = "contact" })

                                        </div>




                                       
                                        <div class="col-md-4">
                                            <label> - </label>
                                            <input style="width:100%" class="btn btn-success" type="button" value=@pers_2.getemp onclick="getemp()" />

                                        </div>

                                    </div>


                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>

                                                <td>@Basic.contactmethod</td>
                                                <td>@organ.details</td>
                                                <td></td>
                                            </tr>
                                        </thead>
                                        <tbody id="emp2"></tbody>
                                    </table>

                                </div>

                            </div>
                        </div>
                      
                      </div>
                            }

                        </div>

                    </div>

    </section>
</div>



