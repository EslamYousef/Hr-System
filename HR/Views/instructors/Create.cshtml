                                @Html.ValidationMessageFor(model => model.Instructor.InstructorID, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label style="color:red">@training.Full_Name</label>
                                @Html.EditorFor(model => model.Instructor.Instructor_FullName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Instructor.Instructor_FullName, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-4">

                                <label>@training.Short_Name</label>
                                @Html.EditorFor(model => model.Instructor.Instructor_ShortName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Instructor.Instructor_ShortName, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-4">
                                <label>
                                    @organ.gender
                                </label>
                                @Html.EnumDropDownListFor(m => m.gender, new { @class = "select2" })
                            </div>


                        </div>
                        <div class="col-md-12">
                            <ul class="nav nav-tabs bordered">
                                <!-- available classes "bordered", "right-aligned" -->
                                <li class="active">
                                    <a href="#homee" data-toggle="tab">
                                        <span class="visible-xs"><i class="entypo-home"></i></span>
                                        <span class="hidden-xs">@training.address_info</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#profile" data-toggle="tab">
                                        <span class="visible-xs"><i class="entypo-user"></i></span>
                                        <span class="hidden-xs">@training.contact_info</span>
                                    </a>
                                </li>

                            </ul>
