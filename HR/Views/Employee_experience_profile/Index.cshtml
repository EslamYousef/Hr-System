@model IEnumerable<HR.Models.ViewModel.Employee_Experience_VM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
                <p class="lead">
                    Employee Experience Profile
                </p>
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }

                <table id="categories" class="table table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Employee Name</th>
                            <th>Company Type</th>
                            <th>Job title</th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Employee_experience_profile.Code</td>
                                <td>@item.fullname</td>
                                @if (@item.Employee_experience_profile.Company_type != null)
                                {
                                <td>@item.Employee_experience_profile.Company_type</td>
                                }
                                else{<td>Empty</td>}
                                @if (@item.Employee_experience_profile.Job_title != null)
                                {
                                    <td>@item.Employee_experience_profile.Job_title</td>
                                }
                                else
                                {
                                <td>Empty</td>
                                }
                            
                                <td>
                                    <a href="@Url.Action("Edit", "Employee_experience_profile", new {id = item.Employee_experience_profile.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>Edit</a>
                                    @*<a href="@Url.Action("delete", "Employee_Address_Profile", new {id = item.Employee_Address_Profile.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Delete</a>*@
                                </td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Code</th>
                            <th>Employee Name</th>
                            <th>Company Type</th>
                            <th>Job title</th>

                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}