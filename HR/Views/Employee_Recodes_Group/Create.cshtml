@model HR.Models.Employee_Recodes_Group
@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
          @Personnel.CreateEmployeeRecodesGroup
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "Employee_Recodes_Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.Record_Group_Code</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Record_Group_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.Record_Group_Code, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.Record_Group_Description</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Record_Group_Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Record_Group_Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.Record_Group_Alternative</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Record_Group_Alternative, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Record_Group_Alternative, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">@Personnel.Linkedtopayroll</label>
                            <div class="col-md-4">
                                @Html.CheckBoxFor(model => model.Linkedtopayroll, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Linkedtopayroll, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="tab-pane" id="Ability">
                            <div>
                                <ul class="nav nav-tabs bordered">

                                    <li>
                                        <a href="#Pension">
                                            <span class="visible-xs"><i class="entypo-user"></i></span>
                                            <span class="hidden-xs">@Personnel.Linkoptions</span>
                                        </a>
                                    </li>
                                </ul>

                                <div class="tab-pane" id="Pension" style="margin-top:10px;">
                                  
                                    <div class="form-group">
                                        <label class="control-label col-md-2">@Personnel.Linkedtobasicpayment</label>
                                        <div class="col-md-4">
                                            @Html.CheckBoxFor(model => model.Linkedtobasicpayment, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Linkedtobasicpayment, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">@Personnel.Linkedtoanotherpayment</label>
                                    </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-2">@Personnel.Salarycodeid</label>
                                            <div class="col-md-4">
                                                @Html.CheckBoxFor(model => model.Linkedtoanotherpayment, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Linkedtoanotherpayment, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-2">@Personnel.Manualpaymentcode</label>
                                    </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <a href="@Url.Action("index","Employee_Recodes_Group")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                                <input type="submit" value="@Personnel.Create" class="btn btn-success" />

                                            </div>
                                        </div>

                                    </div>
                            </div>

                        </div>



                    </div>
                }

            </div>

        </div>

    </section>
</div>
@section scripts{}
