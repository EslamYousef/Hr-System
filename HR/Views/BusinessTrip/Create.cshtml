@model HR.Models.Time_management.Business_Trip

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@using HR.Resource;
    <script>

        $(document).ready(function () {
            debugger
            //document.getElementById("linkedtomanyalpayment").disabled = true;
            $("#manu").prop('disabled', true);
    });
    function employee(sender) {
        debugger
        var chkBox = sender;
        var Checked = chkBox.checked;
        if (Checked == true) {
            debugger
            //document.getElementById("linkedtomanyalpayment").disabled = true;
            $("#salary").prop('disabled', false);
            $("#manu").prop('disabled', true);
            $("#s2id_manu").select2("val", "");
            $("#linkedtomanyalpayment").prop('checked', false).checkboxradio("refresh");
        }
        else
        {
            $("#salary").prop('disabled', true);
            $("#manu").prop('disabled', false);
            $("#linkedtomanyalpayment").prop('checked', true).checkboxradio("refresh");;
            //document.getElementById("linkedtomanyalpayment").disabled = false;
        }
        }
        function employee55(sender) {
            debugger
            var chkBox = sender;
            var Checked = chkBox.checked;
            if (Checked == true) {
                debugger
                $("#salary").prop('disabled', true);
                $("#manu").prop('disabled', false);
                $("#s2id_salary").select2("val", "");
                $("#linkedtomnothelypayroll").prop('checked', false).checkboxradio("refresh");
            }
            else {
                $("#salary").prop('disabled', false);
                $("#manu").prop('disabled', true);
                $("#linkedtomnothelypayroll").prop('checked', true).checkboxradio("refresh");;
            }

        }

    </script>

<div class="content-wrapper">



    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "BusinessTrip", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" /> @organ.Save</div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "BusinessTrip")" class="create-btn">@pers_2.new_</a></div>
                        <div><i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","BusinessTrip")" class="create-btn" value=@organ.delete /></div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "BusinessTrip")" class="create-btn"> @pers_2.Back</a></div>

                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section style="margin-top:40px" class="content-header">
                            <h1>
                                @pers_2.Businesstrip
                            </h1>
                        </section>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label style="color:red">
                                    @organ.code
                                </label>
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                <label style="color:red">
                                    @organ.name
                                </label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>



                            <div class="col-md-4">
                                <label>
                                    @organ.description
                                </label>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                <label>
                                    @pers_2.Allowancerateperday
                                </label>
                                @Html.EditorFor(model => model.alloeancereateberdaye, new { htmlAttributes = new { @type = "number", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.alloeancereateberdaye, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">
                                <label>
                                    @pers_2.shiftsetup
                                </label>

                                @Html.DropDownListFor(m => m.ShiftdaystatusID, new SelectList(ViewBag.shift, "ID", "Code"), pers_2.shiftsetup, new { @class = "select2" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label>
                                    @pers_2.defulttransportaion_GO
                                </label>
                                @Html.DropDownListFor(m => m.TransportationMethodID, new SelectList(ViewBag.trans, "ID", "Code"), pers_2.trans, new { @class = "select2" })
                            </div>
                            <div class="col-md-4">
                                <label>
                                    @pers_2.defalulttransportation_return
                                </label>
                                @Html.DropDownListFor(m => m.transporation_return_ID, new SelectList(ViewBag.trans, "ID", "Code"), pers_2.trans, new { @class = "select2" })
                            </div>
                            <div class="col-md-4">
                                <label>
                                    @Payroll.linkedtomonthlypayroll
                                </label>
                                @Html.CheckBoxFor(model => model.linkedtomnothelypayroll, new { @onclick = "employee(this)", htmlAttributes = new { @class = "form-control", @id = "linksalary", @onclick = "employee(this)", @value = "Chk_Admin" } })
                            </div>
                            <div class="col-md-4">
                                <label>
                                    @pers_2.Salarycode
                                </label>
                                @Html.DropDownListFor(m => m.Salarycode, new SelectList(ViewBag.salary_code, "ID", "Code"), Payroll.SelectSalaryCode, new { @class = "select2", @id = "salary" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label>
                                    @Payroll.linkedtomanualpayment
                                </label>
                                @Html.CheckBoxFor(model => model.linkedtomanyalpayment, new { @onclick = "employee55(this)", htmlAttributes = new { @class = "form-control", @id = "linkpay" } })
                            </div>
                            <div class="col-md-4">
                                <label>
                                    @pers_2.manualcode
                                </label>
                                @Html.DropDownListFor(m => m.Manualpaymenttypecode, new SelectList(ViewBag.ManualPaymentTypes_Header, "ID", "Code"), Payroll.SelectManualpaymenttype, new { @class = "select2", @id = "manu" })
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>
