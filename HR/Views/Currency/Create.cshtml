@model HR.Models.Currency
@using HR.Resource;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
            @Basic.create_currency
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Create", "Currency", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                           <label class="col-sm-2">
                               @Basic.code
                           </label>
                                <div class="col-md-4">
                                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                </div>
                      
                            <div class="col-sm-4">
                                <label class="col-sm-2">
                                    @Basic.native
                                </label>
                                <div class="col-md-2">
                                        @Html.CheckBoxFor(model => model.Native, new { htmlAttributes = new { @class = "CheckBox" } })
                                        @Html.ValidationMessageFor(model => model.Native, "", new { @class = "text-danger" })
                                 </div>
                                </div>
                          </div>

                        <div class="form-group">
                            <label class="col-sm-2">
                                @Basic.name
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2">
                                @Basic.description
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2">
                                @Basic.symbol
                            </label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.symbol, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.symbol, "", new { @class = "text-danger" })
                            </div>
                           
                            <div class="col-sm-6">
                                <label class="col-sm-5">
                                    @Basic.number_of_decimal_places
                                </label>
                                <div class="col-sm-1">
                                    <div class="input-spinner">
                                        @*<button type="button" class="btn btn-default">-</button>*@
                                        @Html.EditorFor(model => model.Nmmber_of_decimal_places, new { htmlAttributes = new { @class = "form-control size-1", value = "1" } })
                                        @*<button type="button" class="btn btn-default">+</button>*@
                                    </div>
                                 </div>
                                </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value=@Basic.create_currency class="btn btn-success" />
                                <a href="@Url.Action("index","Currency")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>

                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>

@section scripts{}
