@model HR.Controllers.Header

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
    //  Layout = "~/Views/Shared/View.cshtml";
}
@using HR.Resource;
<div class="panel panel-primary" data-collapsed="0">
    <div class="panel-body">
        @using (Html.BeginForm("Create", "SalaryItemGroup_Header", FormMethod.Post, new { id = "dd", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <input name="item" value="" hidden />
                    <input name="ID_item" value="" hidden />
                    <input name="value" value="" hidden />
                    <input name="sort" value="" hidden />

                    <div class="form-horizontal">
                        <hr />
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label style="color:red" class="control-label col-md-1">
                                @organ.code
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.SalaryItemCollectionGroup_Header.CodeGroupID, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SalaryItemCollectionGroup_Header.CodeGroupID, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-md-1">

                            </div>
                            <div class="col-md-2">
                                <button type="submit" id="btnSave" class="btn btn-success" value='@organ.create' />
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("index", "SalaryItemGroup_Header")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@organ.Back</a>
                            </div>
                           
                        </div>
                        <div class="form-group">
                            <label style="color:red" class="control-label col-md-1">
                                @organ.name
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.SalaryItemCollectionGroup_Header.CodeGroupDesc, new { htmlAttributes = new { @class = "form-control"} })
                                @Html.ValidationMessageFor(model => model.SalaryItemCollectionGroup_Header.CodeGroupDesc, "", new { @class = "text-danger" })

                            </div>
                            <label class="control-label col-md-1">
                                @organ.description
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.SalaryItemCollectionGroup_Header.CodeGroupAltDesc, new { htmlAttributes = new { @class = "form-control"} })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">
                                <span> @organ.budgettype</span>
                            </label>
                            <div class="col-md-3">
                                @Html.EnumDropDownListFor(m => m.code_group_type, "Select budget type", new { @class = "select2" })
                           
                            </div>
                            <label class="control-label col-md-1">
                                <span> @organ.budgettype</span>
                            </label>
                            <div class="col-md-3">
                                @Html.EnumDropDownListFor(m => m.group_purpose, "Select budget type", new { @class = "select2" })
                            
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1">
                                <span> @organ.budgettype</span>
                            </label>
                            <div class="col-md-3">
                                @Html.EnumDropDownListFor(m => m.Eligibility, "Select budget type", new { @class = "select2" })

                            </div>
                            <label class="control-label col-md-1">
                                <span> @organ.budgettype</span>
                            </label>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.SalaryItemCollectionGroup_Header.PayrollEligibility, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                        </div>
                        <div class="col-md-12">
                            <ul class="nav nav-tabs bordered">
                                <!-- available classes "bordered", "right-aligned" -->
                                <li class="active">
                                    <a href="#Budgetdetails" data-toggle="tab">
                                        <span class="visible-xs"><i class="entypo-home"></i></span>
                                        <span class="hidden-xs">@organ.budgetdetails</span>
                                    </a>
                                </li>
                               
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="Budgetdetails" style="overflow: hidden;width: auto;height: auto;">

                                    <div class="form-group">
                                        <label class="control-label col-md-2">
                                            <span> @pers_2.salarycodeid </span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.DropDownList("items", new SelectList(ViewBag.salaryitem, "ID", "Code"), pers_2.salarycodeid, new { @class = "select2", @id = "ite" })
                                        </div>
                                        <div class="col-md-2"></div>
                                        <div class="control-label col-md-4">
                                            <a onclick="additems()" style="margin-right:3px" class="btn btn-success"> @organ.additems </a>
                                        </div>
                                        <table id="categories" class="table table-bordered table-striped text-center">
                                            <thead>
                                                <tr>
                                                    <td hidden>

                                                    </td>
                                                    <td>
                                                        @pers_2.Salarycode
                                                    </td>
                                                    <td>
                                                        @pers_2.value
                                                    </td>
                                                    <td>
                                                        @pers_2.sortindex
                                                    </td>
                                                </tr>
                                            </thead>

                                            <tbody id="itemTR">
                                               
                                            </tbody>
                                        </table>

                                    </div>
                                    
                                </div>
                            </div>


                          
                        </div>
                    </div>
        }
    </div>
</div>
@section scripts{}
