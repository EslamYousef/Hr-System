@model IEnumerable<HR.Models.Employee_family_profile>
@using HR.Resource;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
<div class="form-group">
    <div class="col-md-5">
    </div>
    <div class="col-md-6">
        <h1>@Personnel.EmployeeFamilyProfile</h1>
    </div>
</div>
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="form-group">
                    <div class="col-md-10">
                        <p class="lead">
                            <a href="@Url.Action("Create", "Employee_family_profile", new { id=@ViewBag.idemp })" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewEmployeeFamilyProfile </a>
                        </p>
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Edit", "Employee_Profile", new {id = @ViewBag.idemp})" class="create-btn"><i class="fas fa-undo"></i>@Personnel.BackToEmployeeProfile</a>
                    </div>
                </div>
            </div>
          

                <!-- /.box-header -->
                <div class="box-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Message"]
                        </div>
                    }

                    <table id="categories" class="table table-bordered table-striped text-center">
                        <thead>
                            <tr>
                                <th>@Personnel.FamilyprofileNo</th>
                                <th>@Personnel.EmployeeName</th>
                                <th>@Personnel.FamilyName</th>
                                <th>@Personnel.Familymembertype</th>
                                <th>@Personnel.Degreeofkinship</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>




                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Code</td>
                                    <td>@item.Employee_Profile.Full_Name</td>
                                    @if (@item.Name != null)
                                    {
                                        <td>@item.Name</td>}
                                    else
                                    {
                                <td> Empty </td> }

                                    <td>@item.Family_member_type</td>
                                    <td>@item.Degree_of_kinship</td>


                                    <td>
                                        <a href="@Url.Action("Edit", "Employee_family_profile", new {id = item.ID})" class="create-btn" style="width:50px"><i class="fa fa-edit"></i>@Personnel.Edit1</a>
                                        <a href="@Url.Action("delete", "Employee_family_profile", new {id = item.ID})" class="create-btn"><i class="far fa-trash-alt"></i>@Personnel.Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                   
                    </table>
                </div>
            </div>

</section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000
    }

        .create-btn svg {
            color: #0d62aa
        }
</style>