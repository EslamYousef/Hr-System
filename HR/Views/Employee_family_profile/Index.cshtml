@model IEnumerable<HR.Models.Employee_family_profile>
@using HR.Resource;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="box">
            <div class="box-header">
                <p class="lead">
                    <a href="@Url.Action("Create", "Employee_family_profile", new { id=@ViewBag.idemp })" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@Personnel.AddNewEmployeeFamilyProfile </a>
                </p>
            </div>
          

                <!-- /.box-header -->
                <div class="box-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @TempData["Message"]
                        </div>
                    }

                    <table id="categories" class="table table-bordered table-striped text-center">
                        <thead>
                            <tr>
                                <th>@Personnel.FamilyprofileNo</th>
                                <th>@Personnel.EmployeeName</th>
                                <th>@Personnel.FamilyName</th>
                                <th>@Personnel.Familymembertype</th>
                                <th>@Personnel.Degreeofkinship</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>




                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Code</td>
                                    <td>@item.Employee_Profile.Full_Name</td>
                                    @if (@item.Name != null)
                                    {
                                        <td>@item.Name</td>}
                                    else
                                    {
                                <td> Empty </td> }

                                    <td>@item.Family_member_type</td>
                                    <td>@item.Degree_of_kinship</td>


                                    <td>
                                        <a href="@Url.Action("Edit", "Employee_family_profile", new {id = item.ID})" class="btn btn-primary btn-sm" style="width:50px"><i class="fa fa-edit"></i>@Personnel.Edit</a>
                                        <a href="@Url.Action("delete", "Employee_family_profile", new {id = item.ID})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Delete</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                   
                    </table>
                </div>
            </div>

</section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}