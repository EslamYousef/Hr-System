@model  IEnumerable<HR.Models.ViewModel.organization_type_vm>
@using HR.Resource;


@{

    ViewBag.Title = "Link";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<h2>@organ.Link</h2>
<div class="row">
    <div class="col-md-12">

        <div class="panel panel-primary" data-collapsed="0">

            <div class="panel-body">

                @Html.AntiForgeryToken()
                <div class="container">
                    @using (Html.BeginForm("link", "job_level_setup", new { id = ViewBag.id }))
                    {

                        <div class="sec-nav">
                            <div><i class="far fa-save"></i><button type="submit" class="create-btn">@organ.Save </button></div>
                            <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("Edit","job_level_setup",new { id = ViewBag.id2 })" class="create-btn"> @pers_2.Back</a></div>

                            


                        </div>

                        <section style="margin-top: 40px" class="content-header">
                            <h1>
                                @organ.Link
                            </h1>
                        </section>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @foreach (var item in Model)
                                { 
                                    if (item.selected == false)
                                    {
                                        <div class="checkbox">
                                            <span>
                                                <input type="checkbox" name="Selected"  value="@item.Educate_Title.ID" /> @item.Educate_Title.Name


                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="checkbox">
                                            <span>
                                                <input type="checkbox" name="Selected" checked value="@item.Educate_Title.ID" /> @item.Educate_Title.Name
                                            </span>
                                        </div>
                                    }
                                }

                            </div>
                        </div>
                       
                    }


                </div>


            </div>

        </div>



    </div>
</div>


@section scripts{}


