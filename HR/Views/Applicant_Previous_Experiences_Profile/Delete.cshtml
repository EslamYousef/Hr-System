    <div class="sec-nav">
        <div><i class="far fa-save"></i><input type="submit" value=@organ.Save class="create-btn" /></div>
        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "Applicant_Previous_Experiences_Profile")" class="create-btn">@pers_2.new_</a></div>
        <div><i class="far fa-trash-alt"></i><input type="submit" value=@pers_2.delete class="create-btn" /></div>
        <div><i class="fas fa-undo"></i> <a href="@Url.Action("index", "Applicant_Previous_Experiences_Profile",new {id=ViewBag.idemp})" class="create-btn">@pers_2.Back</a></div>
    </div>
