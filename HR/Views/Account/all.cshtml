@model IEnumerable<HR.Models.ApplicationUser>
@using HR.Resource;
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }
                <div style="margin-left:10px" class="row form-group">

                    <div class="col-md-3">
                        <a href="@Url.Action("Register", "Account" )" style="width:130px" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>'@pers_2.addnewuser'</a>

                    </div>
                </div>






                <div class="form-group" style="margin-top:70px;margin-left:30px">
                    <table id="categories" style="margin-top:20px" class="table table-bordered table-striped text-center">
                        <thead>
                            <tr>
                                <th>@pers_2.username</th>
                                <th>@pers_2.email </th>
                                <th>@pers_2.active </th>
                                <th></th>
                            
                            </tr>
                        </thead>
                        <tbody id="tbody11">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.active</td>
                                    <td>
                                        <a href="@Url.Action("edit_profile", "Account", new {id = item.Id})" class="create-btn" style="width:50px"><i class="fa fa-edit"></i>@organ.change</a>
                                      
                                    </td>
                                </tr>
                            }
                        </tbody>
                      
                    </table>
                </div>
            </div>
        </div>

    </section>

</div>

<!-- page script -->

@section scripts{}
<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb;
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000;
    }

        .create-btn svg {
            color: #0d62aa;
        }
</style>