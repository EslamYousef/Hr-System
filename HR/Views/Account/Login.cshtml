@model HR.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link rel="icon" href="~/Content/neon/assets/images/favicon.ico">

    <title>تسجيل الدخول</title>

    <link rel="stylesheet" href="~/Content/neon/assets/js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/font-icons/entypo/css/entypo.css">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic">
    <link rel="stylesheet" href="~/Content/neon/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/neon-core.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/neon-theme.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/neon-forms.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/neon-rtl.css">
    <link rel="stylesheet" href="~/Content/neon/assets/css/custom.css">

    <script src="~/Content/neon/assets/js/jquery-1.11.3.min.js"></script>
    <!--[if lt IE 9]><script src="assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/jqueryval")

    <style>
        .text-danger {
            color: #ef0000;
            font-size: 1.3em;
        }

        .login-page .login-form .form-group .input-group .form-control {
            font-size: 1.3em;
        }

        .validation-summary-errors ul {
            list-style: none;
        }
    </style>
</head>
<body class="page-body login-page login-form-fall" data-url="http://neon.dev">

    <!-- This is needed when you send requests via Ajax -->
    <script type="text/javascript">
var baseurl = '';
    </script>
    <div class="login-container">

        <div class="login-header login-caret">

            <div class="login-content">

                <a href="@Url.Action("Index", "Home", new {area = ""})" class="logo">
                    <img src="~/Content/neon-rtl/assets/images/logo@2x.png" width="120" alt="" />
                </a>

                <p class="description">عزيزي المستخدم من فضلك سجل دخولك للولوج إلي لوحة التحكم</p>

                <!-- progress bar indicator -->
                <div class="login-progressbar-indicator">
                    <h3>43%</h3>
                    <span>جاري تسجيل الدخول ...</span>
                </div>
            </div>

        </div>

        <div class="login-progressbar">
            <div></div>
        </div>

        <div class="login-form">

            <div class="login-content">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-user"></i>
                            </div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "اسم المستخدم", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group">

                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>ViewBag.ReturnUrl

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "كلمة المرور", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-login">
                            <i class="entypo-login"></i>
                            تسجيل الدخول
                        </button>
                    </div>

                }
                @using (Html.BeginForm("register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-login">
                            <i class="entypo-login"></i>
                            Register
                        </button>
                    </div>
                }

            </div>

        </div>

    </div>

    <!-- Bottom scripts (common) -->
    <script src="~/Content/neon/assets/js/gsap/TweenMax.min.js"></script>
    <script src="~/Content/neon/assets/js/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js"></script>
    <script src="~/Content/neon/assets/js/bootstrap.js"></script>
    <script src="~/Content/neon/assets/js/joinable.js"></script>
    <script src="~/Content/neon/assets/js/resizeable.js"></script>
    <script src="~/Content/neon/assets/js/neon-api.js"></script>
    <script src="~/Content/neon/assets/js/jquery.validate.min.js"></script>
    <script src="~/Content/neon/assets/js/neon-login.js"></script>

    <!-- JavaScripts initializations and stuff -->
    <script src="~/Content/neon/assets/js/neon-custom.js"></script>

    <!-- Demo Settings -->
    <script src="~/Content/neon/assets/js/neon-demo.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}