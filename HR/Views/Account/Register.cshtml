@model HR.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
@using HR.Resource;


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="sec-nav">
        <div><i class="far fa-save"></i><button type="submit" class="create-btn">@HR.Resource.organ.Save </button></div>
        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("all", "Account")" class="create-btn"> @HR.Resource.pers_2.Back</a></div>
        <div><i class="far fa-save"></i><button name="Command" value="link" class="create-btn" /> @HR.Resource.pers_2.linkuser</div>

    </div>
   
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
       <div class="col-md-4">
           
           <label>
               @pers_2.email
           </label>

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-4">

            <label>
                @Basic.new_pass
            </label>

            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <label>
                @Basic.confirm_pass
            </label>
           

            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
       <div class="form-group">
        <div class="col-md-4">
            <label>
                @pers_2.active
            </label>

            @Html.CheckBoxFor(m => m.active, new { @class = "form-control" })
        </div>
       
         
        <div class="col-md-4">
            <label style="color:red">
                @pers_2.employee 
            </label>
            @Html.DropDownListFor(m => m.employee, new SelectList(ViewBag.employee, "ID", "Code"), pers_2.employee, new { @class = "select2 form-control", @id = "Country1" })
            @Html.ValidationMessageFor(model => model.employee, "", new { @class = "text-danger" })

        </div>
          
        <div class="col-md-4">
            <label>
                @pers_2.companyname
            </label>
            @Html.EditorFor(m => m.company_name, new { @class = "form-control" })
        </div>
    </div>

  
 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


