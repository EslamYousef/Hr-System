@model HR.Models.EOS_Request

@{
    ViewBag.Title = "interview";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@using HR.Resource;
@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
       @pers_2.InterviewQuestions
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("interview", "EOS_request", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.HiddenFor(m => m.ID);
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                           <label class = "control-label col-md-3">
                                @pers_2.number
                            </label>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.number, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                @pers_2.requestdate
                            </label>
                              <div class="col-md-8">
                                @if (Model.Requset_date != null)
                                {
                                    <input value=@Model.Requset_date.ToString("dd/MM/yyyy") class="form-control" readonly />
                                }
                                else
                                {

                                    <input value="empty" class="form-control" readonly />
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                @pers_2.Noticeperiodtype
                            </label>
                            <div class="col-md-8">
                                <input value=@Model.Notice_period_type.GetTypeCode() class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                @pers_2.lastworkdaybeforerequest
                            </label>
                            <div class="col-md-8">
                                @if (Model.last_work_day_before_request != null)
                                {
                                    <input value=@Model.last_work_day_before_request.ToString("dd/MM/yyyy") class="form-control" readonly />
                                }
                                else
                                {
                                    <input value="empty" class="form-control" readonly />
                                }
                            </div>

                        </div>
                        <div class="form-group">
                        <label class="control-label col-md-3">
                                @pers_2.DateofEOS
                            </label>
                              <div class="col-md-8">
                                @if (Model.Date_of_EOS != null)
                                {
                                    <input value=@Model.Date_of_EOS.ToString("dd/MM/yyyy") class="form-control" readonly />

                                }
                                else
                                {
                                    <input value="empty" class="form-control" readonly />
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                @pers_2.dateofeosinterview
                            </label>
                              <div class="col-md-8">
                                @if (Model.date_of_eos_interview != null)
                                {
                                    <input value=@Model.date_of_eos_interview.ToString("dd/MM/yyyy") class="form-control" readonly />

                                }
                                else
                                {
                                    <input value="empty" class="form-control" readonly />
                                }
                            </div>
                        </div>
                    </div>


                    <table id="categories" class="table table-bordered table-striped text-center">
                        <thead>
                            <tr>
                                <th>@pers_2.code</th>
                                <th>@pers_2.Question</th>
                                <th>@pers_2.answer</th>
                                <th>@pers_2.notes</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                            @for (var item=0;item<Model.Answer_EOS_interview.Count();item++)
                            {
                                <tr>
                                    @Html.HiddenFor(m=>m.Answer_EOS_interview[item].ID)
                                    <td>@Html.EditorFor(model => model.Answer_EOS_interview[item].question.Question_Code, new { htmlAttributes = new { @class = "form-control", @readonly = true } })</td>

                                   
                                    <td>@Html.EditorFor(model => model.Answer_EOS_interview[item].question.Question_Description, new { htmlAttributes = new { @class = "form-control" ,@readonly=true} })</td>

                                    <td>@Html.EditorFor(model => model.Answer_EOS_interview[item].answer, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    <td>@Html.EditorFor(model => model.Answer_EOS_interview[item].Notes, new { htmlAttributes = new { @class = "form-control" } })</td>

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>@pers_2.code</th>
                                <th>@pers_2.Question</th>
                                <th>@pers_2.answer</th>
                                <th>@pers_2.notes</th>

                            </tr>
                        </tfoot>
                    </table>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=@pers_2.create class="btn btn-success" />
                            <a href="@Url.Action("edit","EOS_request",new { id=Model.ID.ToString()})" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@pers_2.Back</a>

                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>
@section scripts{}

