                                    <input type="submit" value="@Personnel.Create" class="btn btn-success" />
                                    <a href="@Url.Action("index","Committe_Resolution_Recuirtment")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Personnel.Back</a>
                                </div>
                            </div>
                        </div>

                    </div>

                }

            </div>

        </div>

    </section>
</div>

