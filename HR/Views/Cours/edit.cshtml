@model HR.Models.Training.trans.Cours
@using HR.Resource;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">


    <!-- Main content -->
    <section class="content">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("edit", "Cours", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" />@organ.Save</div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "Cours")" class="create-btn">@pers_2.new_</a></div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "Cours")" class="create-btn"> @pers_2.Back</a></div>

                        <div><i class="far fa-save"></i><button name="Command" value="Submit" class="create-btn" /> @training.Qualification</div>
                        <div><i class="far fa-save"></i><button name="Command" value="Submit_center" class="create-btn" /> @training.centers</div>
                        <div><i class="far fa-save"></i><button name="Command" value="Submit_skill" class="create-btn" /> @organ.skills</div>
                        <div><i class="far fa-save"></i><button name="Command" value="Submit_type" class="create-btn" /> @training.TrainingType</div>

                     </div>

                    @Html.AntiForgeryToken()
                    <input value="" hidden name="check_A" />
                    <div class="form-horizontal">
                        <hr />
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section style="margin-top:40px" class="content-header">
                            <h1>
                                @training.Courses
                            </h1>
                        </section>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label style="color:red">
                                    @training.course_sub_group
                                </label>
                                @Html.DropDownListFor(m => m.SubGroup_Code, new SelectList(ViewBag.sub, "ID", "Code"), training.course_sub_group, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.SubGroup_Code, "", new { @class = "text-danger" })
                                <input type="hidden" value=" " class="form-control" id="countryname" disabled />
                            </div>
                            <div class="col-md-4">

                                <label style="color:red">@organ.code</label>
                                @Html.EditorFor(model => model.Course_Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Course_Code, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-4">

                                <label style="color:red">@organ.description</label>
                                @Html.EditorFor(model => model.Course_Desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Course_Desc, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-4">

                                <label>@organ.AlterunitDescription</label>
                                @Html.EditorFor(model => model.Course_AltDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Course_AltDesc, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-4">
                                <label>
                                    @training.CourseClassification
                                </label>
                                @Html.DropDownListFor(m => m.CourseClassification_Code, new SelectList(ViewBag.classification, "ID", "Code"), training.CourseClassification, new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.CourseClassification_Code, "", new { @class = "text-danger" })
                                <input type="hidden" value=" " class="form-control" id="countryname" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">

                                <label>@training.local_price_trainee</label>
                                @Html.EditorFor(model => model.LocalAveragePrice_Trainee, new { htmlAttributes = new { @type = "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LocalAveragePrice_Trainee, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">

                                <label>@training.local_price_course</label>
                                @Html.EditorFor(model => model.LocalAveragePrice_Course, new { htmlAttributes = new { @type = "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LocalAveragePrice_Course, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">

                                <label>@training.pass_grade</label>
                                @Html.EditorFor(model => model.Pass_Grade, new { htmlAttributes = new { @type = "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Pass_Grade, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">

                                <label>@training.reward_amount</label>
                                @Html.EditorFor(model => model.RewordAmount, new { htmlAttributes = new { @type = "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RewordAmount, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">

                                <label>@training.reward_degree</label>
                                @Html.EditorFor(model => model.Reword_Degree, new { htmlAttributes = new { @type = "number", @min = "0", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Reword_Degree, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">

                                <label>
                                    @pers_2.active
                                </label>
                                @if (Model.IsActive == true)
                                {

                                    <input type="checkbox" value="on" checked class="icheck" name="check_A" />

                                }
                                else
                                {

                                    <input type="checkbox" value="on" class="icheck" name="check_A" />

                                }



                            </div>

                        </div>


                    </div>

                }


            </div>

    </section>
</div>


@section scripts{}

