                                    <button type="submit" id="btnSave" class="btn btn-success" name="Command" value="Save">CREATE</button>
                                    <a href="@Url.Action("index","Organization_unit_schema")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Back</a>
                                </div>
                            </div>
                        </div>
                        }

                    </div>

                </div>

        </section>
