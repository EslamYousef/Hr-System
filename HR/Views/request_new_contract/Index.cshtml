@model IEnumerable<HR.Models.request_new_contract>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

@using HR.Resource;
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <div class="box">
            <div class="box-header">
            </div>

            <!-- /.box-header -->
            <div class="box-body">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["Message"]
                    </div>
                }
                <div class="form-group" id="buttons">

                    <a href="@Url.Action("Create","request_new_contract")" style="width:240px" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>@pers_2.CreaterequesttonewContract</a>
                   
                </div>
             

                <div class="form-group" style="margin-top:70px">
                    <table id="categories" style="margin-top:20px" class="table table-striped">
                        <thead>
                            <tr>
                                <th>@pers_2.number</th>
                                <th>@pers_2.empid</th>
                                <th> @pers_2.employee</th>
                                <th>@pers_2.status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbody11">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    @if (item.Employee_Profile != null)
                                    {
                                        <td>@item.Employee_Profile.ID</td>
                                        <td>@item.Employee_Profile.Name</td>
                                    }
                                    else
                                    {
                                        <td>Empty</td>
                                        <td>Empty</td>
                                    }

                                    <td>@item.status.statu</td>

                                    <td>
                                        @if (item.status.statu != HR.Models.Infra.check_status.Approved && item.status.statu != HR.Models.Infra.check_status.Rejected)
                                        {
                                            <a href=@Url.Action("Edit", "request_new_contract", new { id = item.ID }) class="create-btn" style="width:70px"><i class="fa fa-edit"></i>@organ.change</a>
                                        }
                                        <a href=@Url.Action("Delete", "request_new_contract", new {id=item.ID}) class="create-btn"><i class="far fa-trash-alt"></i>@pers_2.delete</a>
                                        <a href=@Url.Action("status", "request_new_contract", new {id=item.ID}) class="create-btn"><i class="fas fa-shield-alt"></i>@pers_2.status</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            @*<tr>

                    <th>@pers_2.number</th>
                    <th>@pers_2.empid</th>
                    <th>@pers_2.employee</th>
                    <th>@pers_2.status</th>
                    <th></th>
                </tr>*@
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

    </section>

</div>

<!-- page script -->
<script>
    var $ = jQuery;

    $(document).ready(function () {
        $('#categories').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false,
            "order" : 1
        });
    });
</script>

@section scripts{}


<style>
    table {
        margin-top: 70px;
        border: 1px solid #ddd;
        overflow-y: auto;
        white-space: nowrap;
    }

        table thead {
            border-bottom: 3px solid #bbb;
        }

    .create-btn {
        margin-left: 5px;
        margin-right: 5px;
        color: #000;
    }

        .create-btn svg {
            color: #0d62aa;
        }
</style>