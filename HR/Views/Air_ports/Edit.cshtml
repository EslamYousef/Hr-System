@model HR.Models.Air_ports

@using HR.Resource;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}
@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Edit", "Air_ports", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="sec-nav">
                        <div><i class="far fa-save"></i><button type="submit" class="create-btn" /> @organ.Save</div>
                        <div><i class="fas fa-plus"></i><a href="@Url.Action("create", "Air_ports")" class="create-btn">@pers_2.new_</a></div>
                        <div><i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","Air_ports")" class="create-btn" value=@organ.delete /></div>
                        <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index", "Air_ports")" class="create-btn"> @pers_2.Back</a></div>

                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section style="margin-top:40px" class="content-header">
                            <h1>
                                @Basic.edit_airport
                            </h1>
                        </section>
                        <div class="form-group">
                          
                            <div class="col-md-4">
                                <label>
                                    @Basic.code
                                </label>
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @readonly = true, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                       
                          
                            <div class="col-md-4">
                                <label>
                                    @Basic.name
                                </label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                      
                         
                            <div class="col-md-4">
                                <label>
                                    @Basic.description
                                </label>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                          
                            <div class="col-md-4">
                                <label>
                                    @Basic.Country
                                </label>
                                @Html.DropDownListFor(m => m.countryid, new SelectList(ViewBag.country, "ID", "Code"), Basic.Country, new { @class = "select2", @onchange = "CountryName()", id = "country" })
                                @Html.ValidationMessageFor(model => model.countryid, "", new { @class = "text-danger" })
                                <input type="hidden" value=" " class="form-control" id="countryname" disabled />

                            </div>
                     
                           
                            <div class="col-md-4">
                                <label>
                                    @Basic.Region
                                </label>
                                @Html.DropDownListFor(m => m.areaid, new SelectList(ViewBag.area, "ID", "Code"), Basic.Region, new { @class = "select2", @onchange = "areaName()", id = "area", @disabled = true })
                                @Html.ValidationMessageFor(model => model.areaid, "", new { @class = "text-danger" })
                                <input type="hidden" value=" " class="form-control" id="Areaname" disabled />

                            </div>
                      
                            
                            <div class="col-md-4">
                                <label>
                                    @Basic.State
                                </label>
                                @Html.DropDownListFor(m => m.the_statesid, new SelectList(ViewBag.state, "ID", "Code"),Basic.State, new { @class = "select2", @onchange = "getstate()", id = "state", @disabled = true })
                                @Html.ValidationMessageFor(model => model.the_statesid, "", new { @class = "text-danger" })
                                <input type="hidden" value=" " class="form-control" id="statename" disabled />

                            </div>
                   
                        
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>


<script>
    function CountryName() {
         
        var id = $("#country").val();
        $("#area").empty();
        $("#state").empty();
        $("#area").select2("val", "");
        $("#state").select2("val", "");
        $("#statename").val(" ");
        $("#Areaname").val(" ");
        $.ajax({
            type: "post",
            url: "/Helper/GetCountry",
            data: { "id": id },
            success: function (result) {
                 

                $("#countryname").val(result.Name);
                getallarea(result.ID);
            },
            error: function () {
                 
                $("#countryname").val(" ");
