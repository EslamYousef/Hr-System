@model HR.Models.ViewModel.Assign_subqulifications_ViewModel
@using HR.Resource;

@{
    ViewBag.Title = "link";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}

<div class="row">

    <div class="col-md-12">

        <div class="panel panel-primary" data-collapsed="0">

            <div class="panel-body">

                @Html.AntiForgeryToken()
                <div class="container">
                    @using (Html.BeginForm("link", "Application"))
                    {
                        <div class="sec-nav">
                            <div><i class="far fa-save"></i><button type="submit" class="create-btn" />@organ.Save</div>
                            <div><i class="fas fa-plus"></i><a href="@Url.Action("link", "Application")" class="create-btn">@pers_2.new_</a></div>
                            <div><i class="far fa-trash-alt"></i><input type="button" href="@Url.Action("index","Application")" class="create-btn" value=@organ.delete /></div>
                            <div><i class="fas fa-undo"></i><a style="" href="@Url.Action("index","Application",new {id=ViewBag.idemp})" class="create-btn"> @pers_2.Back</a></div>
                        </div>
                        <hr /><hr /><hr />
                        <section class="content-header">
                            <h1>
                                @Personnel.HiringCheckList
                            </h1>
                        </section>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.HiddenFor(m => m.nameID)
                                <table id="tb-family" border="1" style="display: table; width:400px;">
                                    <thead>
                                        <tr>
                                            <th id="fa">Select</th>

                                            <th id="per">@Personnel.Name</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AvailableFruits)
                                        {
                                            if (item.Selected == false)
                                            {

                                                <tr>
                                                    <td>
                                                        <div>
                                                            <label>
                                                                <input type="checkbox" name="SelectedFruits" value="@item.Value" />
                                                            </label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div>
                                                            @item.Text
                                                        </div>

                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>

                                                    <td>
                                                        <div>
                                                            <label>
                                                                <input type="checkbox" name="SelectedFruits" checked value="@item.Value" />
                                                            </label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div>
                                                            @item.Text
                                                        </div>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="form-group text-center" hidden>
                            <a href="@Url.Action("index","Application")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>@Basic.Back</a>

                            <input type="submit" class="btn btn-primary" value=@organ.submit />
                        </div>
                    }


                </div>


            </div>

        </div>



    </div>
</div>
