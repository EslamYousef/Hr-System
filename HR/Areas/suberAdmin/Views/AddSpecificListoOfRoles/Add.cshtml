@model HR.Areas.suberAdmin.Models.Roles

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/MainLayOut.cshtml";
}



@Scripts.Render("~/bundles/jqueryval")
<div class="content-wrapper">

    <section class="content-header">
        <h1>
          Add New Role
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <!-- /.box-header -->
            <div class="box-body">

                @using (Html.BeginForm("Add", "AddSpecificListoOfRoles", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">

                        <hr />

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["Message"]
                            </div>
                        }

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">

                            <label class="control-label col-md-2">
                              Role
                            </label>
                            @*<div class="col-md-4">
                                @Html.DropDownListFor(m => m.Countryid, new SelectList(ViewBag.country, "ID", "Code"), Basic.Country,new {   @class ="select2",@onchange= "CountryName()",@id= "Country" })
                                @Html.ValidationMessageFor(model => model.Countryid, "", new { @class = "text-danger" })
                                <input type="text" value=" " class="form-control" id="countryname" disabled />
                            </div>*@
                           
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" id="btnSave" class="btn btn-success" name="Command" value="Save">ADD</button>
                                <a href="@Url.Action("Index" , "AddSpecificListoOfRoles")" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>Back</a>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>

    </section>
</div>




